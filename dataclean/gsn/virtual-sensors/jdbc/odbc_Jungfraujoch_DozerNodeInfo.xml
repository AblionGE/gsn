        <output-structure>
            <field name="GEN_TIME" type="BIGINT"/>
            <field name="HEADER_ATIME_HIGH" type="SMALLINT"/>
            <field name="HEADER_ATIME_LOW" type="INTEGER"/>
            <field name="HEADER_ORIGINATORID" type="INTEGER"/>
            <field name="HEADER_SEQNR" type="INTEGER"/>
            <field name="PAYLOAD_ID_LONGARRAY0" type="BIGINT"/>
            <field name="PAYLOAD_ID_LONGARRAY1" type="BIGINT"/>
            <field name="PAYLOAD_XE1205FREQUENCY" type="SMALLINT"/>
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerNodeInfoMsg) from Jungfraujoch deployment</description>
    <life-cycle pool-size="10"/>
    <addressing/>
    <storage/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="jdbc">
                    <predicate key="table-name">permasense.Jungfraujoch_DozerNodeInfo_3933</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query>select * from wrapper</query>
            </source>
            <query>select * from source</query>
        </stream>
    </streams>
</virtual-sensor>
