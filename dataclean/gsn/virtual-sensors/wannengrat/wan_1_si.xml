<virtual-sensor name="wan4_to_si" priority="10" >
    <processing-class>
       <class-name>gsn.vsensor.SensorInternetVS</class-name>
       <init-params>
			<param name="si-url">http://montblanc.slf.ch/data/index.php</param>
			<param name="si-username">username</param>
			<param name="si-password">password</param>
			<param name="si-stream-mapping">2,3,4,5,6,7,8</param>
		</init-params>
        <output-structure />
    </processing-class>
    <description>WAN4 data bridge to SensorInternet on montblanc.slf.ch</description>
    <life-cycle pool-size="10" />
    <addressing/>
    <storage />
    <streams>
    <stream name="data">
      <source alias="source" storage-size="1" sampling-rate="1">
	    <address wrapper="local">
	      <predicate key="NAME">WAN4</predicate>
	    </address>
        <query> select * from wrapper </query>
      </source>
      <query> select * from source</query>
    </stream>
  </streams>
</virtual-sensor> 