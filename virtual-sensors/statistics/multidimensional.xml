<virtual-sensor name="multidimensional" priority="10">
	<processing-class>
		<class-name>gsn.vsensor.RVirtualSensor</class-name>
		<init-params>
			<param name="script">./virtual-sensors/statistics/multidimensional.r</param>
			<param name="window_size">200</param>
			<param name="step_size">40</param>
			<param name="server">localhost</param>
			<param name="port">6311</param>
			<param name="script_type">plot</param>
		</init-params>
		<output-structure>
			<field name="temp123" type="double" />
      <field name="dmem" type="bigint" />
			<field name="light123" type="double" />
			<field name="packet_type123" type="int" />
			<field name="epoch" type="bigint" />
			<field name="lon123" type="double" />
			<field name="lat123" type="double" />
			<field name="gsn_plot" type="binary:image/jpeg" />
		</output-structure>
	</processing-class>
	<description>This is an example.</description>
	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="geographical">Sensor 115 @ EPFL</predicate>
		<predicate key="LATITUDE">46.520190</predicate>
		<predicate key="LONGITUDE">6.565010</predicate>
	</addressing>
	<storage history-size="24h" />
	<streams>
		<stream name="in1">
			<source alias="s1" sampling-rate="1" storage-size="1">
				<address wrapper="multiformat">
					<predicate key="HOST">localhost</predicate>
					<predicate key="PORT">22001</predicate>
					<predicate key="RATE">100</predicate>
				</address>
				<query>SELECT light, temperature, packet_type, timed FROM wrapper</query>
			</source>
			<source alias="s2" storage-size="1" sampling-rate="1">
				<address wrapper="gps-test">
					<predicate key="HOST">localhost</predicate>
					<predicate key="PORT">9001</predicate>
					<predicate key="TIMEOUT">100</predicate>
					<predicate key="picture">images/coin.jpeg</predicate>
				</address>
				<query>SELECT latitude, longitude FROM wrapper</query>
			</source>
			<source alias="s3" sampling-rate="1" storage-size="1">
				<address wrapper="memory-usage">
					<predicate key="HOST">localhost</predicate>
					<predicate key="PORT">22001</predicate>
					<predicate key="local-port">22001</predicate>
					<predicate key="sampling-rate">100</predicate>
				</address>
				<query>select HEAP,NON_HEAP,PENDING_FINALIZATION_COUNT,TIMED from wrapper</query>
			</source>
			<query>SELECT s1.temperature AS temp123, s3.HEAP AS dmem, s1.light AS light123, s1.packet_type AS packet_type123, s1.timed AS epoch, s2.latitude AS lat123, s2.longitude AS lon123 FROM s1,s2,s3</query>
		</stream>
	</streams>
</virtual-sensor>
