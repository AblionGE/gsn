<virtual-sensor name="RemoteAccessDemo" priority="11">
   <processing-class>
      <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
   </processing-class>
   <description>Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/remoteTest.xml</description>
   <life-cycle pool-size="10"/>
   <addressing>
      <predicate key="geographical">Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/remoteTest.xml</predicate>
   </addressing>
   <output-structure>
      <field name="DATA" type="binary:jpg"/>
   </output-structure>
   <storage history-size="1" />
   <streams>
      <stream name="DATA" rate="100">
         <source alias="source1" storage-size="1" sampling-rate="1">
            <address wrapper="remote">
               <predicate key="HOST">localhost</predicate>
               <predicate key="PORT">22001</predicate>
               <predicate key="NAME">MemoryPlotVS</predicate>
            </address>
            <query>select DATA from "WRAPPER"</query>
         </source>
         <query>select "source1.DATA" from "source1"</query>
      </stream>
   </streams>
</virtual-sensor>

