<virtual-sensor name="Whymper_Dozer_Base_Status_1534" priority="10">
	<processing-class>
		<class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
		<unique-timestamps>true</unique-timestamps>
		<output-structure>
			<field name="SEQNR" type="DOUBLE" />
			<field name="ORIGINATORID" type="DOUBLE" />

			<field name="ATIME" type="DOUBLE" />
			<field name="GENTIME" type="DOUBLE" />

			<field name="SAMPLENO" type="DOUBLE" />

			<field name="UPTIME" type="DOUBLE" />
			<field name="BOOTTIME" type="DOUBLE" />

			<field name="TEMPERATURE" type="DOUBLE" />
			<field name="REALTEMPERATURE_C" type="DOUBLE" />

			<field name="MOISTURE" type="DOUBLE" />
			<field name="APPROXMOISTURE_REL" type="DOUBLE" />
			<field name="REALMOISTURE_REL" type="DOUBLE" />

			<field name="MSPVOLTAGE" type="DOUBLE" />
			<field name="MSPTEMPERATURE" type="DOUBLE" />

			<field name="QUEUESIZE" type="DOUBLE" />

			<field name="PACKETSSENT" type="DOUBLE" />
			<field name="PACKETSRECEIVED" type="DOUBLE" />

			<field name="CHILDCOUNT" type="DOUBLE" />
			<field name="RSSI" type="DOUBLE" />

			<field name="TIMESTAMP" type="DOUBLE" />
		</output-structure>
	</processing-class>
	<description>status packets of access node from whymper WSN</description>
	<life-cycle pool-size="10" />
	<addressing />
	<storage />
	<streams>
		<stream name="data">
			<source alias="source" storage-size="1" sampling-rate="1">
				<address wrapper="ss_tinyos-mig">
					<predicate key="ss-host">localhost</predicate>
					<predicate key="ss-port">25000</predicate>
					<predicate key="continue-on-error">true</predicate>
					<predicate key="wrapper-name">mig2</predicate>
					<predicate key="wrapper-keep-processed-ss-entries">false</predicate>
					<predicate key="source">sf@whymper.ethz.ch:9001</predicate>
					<predicate key="message-classname">ch.ethz.permafrozer.DozerBaseStatusMsg</predicate>
					<predicate key="getter-prefix">get</predicate>
				</address>
				<query> select * from wrapper </query>
			</source>
			<query> select * from source</query>
		</stream>
	</streams>
</virtual-sensor>

