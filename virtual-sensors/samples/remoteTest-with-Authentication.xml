<virtual-sensor name="RemoteAccessDemo" priority="11">
   <processing-class>
      <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
   <output-structure>
      <field name="DATA" type="binary:image/jpeg"/>
   </output-structure>
  
   </processing-class>
   <description>Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/remoteTest.xml</description>
   <life-cycle pool-size="10"/>
   <addressing>
      <predicate key="geographical">Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/remoteTest.xml</predicate>
   </addressing>
     <storage history-size="1" />
   <streams>
      <stream name="DATA" >
         <source alias="source1" storage-size="1" sampling-rate="1">
            <address wrapper="remote">
               <predicate key="HOST">localhost</predicate>
               <predicate key="PORT">22001</predicate>
               <predicate key="NAME">MemoryPlotVS</predicate>
               <predicate key="USERNAME">http-user</predicate> <!-- for http://localhost:22001, running remote VS-->
               <predicate key="PASSWORD">http-pass</predicate>
			   <predicate key="LOCAL-USERNAME">local-http-user</predicate>  <!-- local GSN session -->
               <predicate key="LOCAL-PASSWORD">local-https-pass</predicate>
            </address>
            <query>select DATA,Timed from wrapper</query>
         </source>
         <query>select source1.DATA,Timed from source1</query>
      </stream>
   </streams>
</virtual-sensor>

