<virtual-sensor name="EPUCKGUI" priority="10" >
    <processing-class>
		<class-name>gsn.vsensor.HCIProtocolGUIVS</class-name>
		<init-params>
		<param name="HCIProtocolClass">gsn.utils.protocols.EPuck.SerComProtocol</param>
		</init-params>
	</processing-class>
        <author>Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/serialRaw.xml.</author>
        <email>Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/serialRaw.xml.</email>
        <description>Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/serialRaw.xml.</description>
        <life-cycle pool-size="10" />
        <addressing>
	        	<predicate key="geographical">Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/localTimeVS.xml.</predicate>
    	  </addressing>
        <output-structure>
           <field name="RAW_PACKET" type="binary"/>
        </output-structure>
        <storage history-size="1m" />
        <input-streams>
           <input-stream name="input1">
            <stream-source alias="source1" sampling-rate="1" storage-size="1">
                <address wrapper="serial">
                    <predicate key="HOST">localhost</predicate>
                    <predicate key="PORT">22001</predicate>
                    <predicate key="serialport">/dev/ttyS1</predicate>
                </address>
                <query>select * from "WRAPPER"</query>
            </stream-source>
            <query>select * from "source1"</query>
        </input-stream> 
        </input-streams>
</virtual-sensor> 
