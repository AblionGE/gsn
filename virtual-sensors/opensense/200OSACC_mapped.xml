<virtual-sensor name="OSACC_mapped" priority="11">
	<processing-class>
		<class-name>gsn.vsensor.ModellingVirtualSensor</class-name>
		<unique-timestamps>false</unique-timestamps>
    	<init-params>
            <param name="model">gsn.utils.models.StreamInterpolateJoinModel</param>
            <param name="model.0.historysize">30</param>
		</init-params>
		<output-structure>
           <field name="station" type="smallint" />
           <field name="accel_x" type="double" />
           <field name="accel_y" type="double" />
           <field name="accel_z" type="double" />
           <field name="latitude" type="double" />
           <field name="longitude" type="double" />
           <field name="altitude" type="double" />
           <field name="HDOP" type="double" />
		</output-structure>
	</processing-class>
	<description>Map GPS onto Accelerometer</description>
	<life-cycle pool-size="100" />
	<addressing>
		<predicate key="geographical">Lausanne, Switzerland</predicate>
	</addressing>
	<storage history-size="-1" />
	<streams>
		<stream name="A">
			<source alias="A"  sampling-rate="1" storage-size="1">
				<address wrapper="zeromq">
					<predicate key="address">inproc://stream/osgps</predicate>
					<predicate key="vsensor">osgps</predicate>
				</address>
				<query>select * from wrapper</query>
			</source>
			<query>select latitude,longitude,altitude,HDOP from A</query>
		</stream>
		<stream name="B">
			<source alias="B"  sampling-rate="1" storage-size="1">
				<address wrapper="zeromq">
					<predicate key="address">inproc://stream/osacc</predicate>
					<predicate key="vsensor">osacc</predicate>
				</address>
				<query>select * from wrapper</query>
			</source>
			<query>select * from B</query>
		</stream>
	</streams>
</virtual-sensor>
