    <processing-class>
		<class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
		<init-params/>
	</processing-class>
        <description>Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/localTimeVS.xml.</description>
        <life-cycle pool-size="10" />
        <addressing>
	        	<predicate key="geographical">Not Specified, please edit the file $INSTALL_PATH/virtual-sensors/localTimeVS.xml.</predicate>
    	  </addressing>
        <output-structure/>
        <storage history-size="1m" />
