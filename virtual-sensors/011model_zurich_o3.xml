<virtual-sensor name="model_zurich_o3" priority="11">
	<processing-class>
		<class-name>gsn.vsensor.ModellingVirtualSensor</class-name>
                <init-params>
                    <param name="model">gsn.utils.models.NNModel</param> <!-- class name of the model to load -->
		      <param name="sec_model">gsn.utils.models.OpenSenseVSZO3</param>
                </init-params>
		<output-structure>
			<field name="ozone_ppb" type="double" />
			<field name="temperature" type="double"/>
			<field name="humidity" type="integer"/>
                        <field name="o3_rel" type="integer"/>
                        <field name="o3_abs" type="integer"/>
			<field name="latitude" type="double"/>
			<field name="longitude" type="double"/>
		</output-structure>
	</processing-class>
	<description>Virtual sensor returns data for query of latitude+longitude.</description>

	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="geographical">OSM_VSZ_O3</predicate>
		<predicate key="usage">OpenSense Nearest Neighbor Interpolation</predicate>
	</addressing>
	
	<storage history-size="1m" />
	<streams>
		<stream name="sensor1">	
			<source alias="zurich_o3_vs" storage-size="1"  sampling-rate="1">
				<address wrapper="local">
                          <predicate key="NAME">opensense_zurich_o3</predicate>
				</address>
				<query>select  timed, temperature,ozone_ppb, humidity, o3_rel, o3_abs, latitude, longitude from WRAPPER</query>
			</source>
			<query>
				select  timed, temperature,ozone_ppb, humidity, o3_rel,o3_abs, latitude, longitude from zurich_o3_vs	
			</query>
		</stream>
	</streams>
</virtual-sensor> 
