<virtual-sensor name="opensense_zurich_co" priority="11">
	<processing-class>
		<class-name>gsn.vsensor.OpenSense_Zurich_CO_Indexer</class-name>
		<output-structure>
			<field name="sensor_ppm" type="double"/>
			<field name="co_rel" type="integer"/>
			<field name="co_abs" type="integer"/>
                        <field name="temperature" type="double"/>
			<field name="latitude" type="double"/>
			<field name="longitude" type="double"/>
		</output-structure>
	</processing-class>
	<description>Virtual sensor returns data for query of latitude+longitude.</description>

	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="geographical">OSM_VSZ_CO</predicate>
		<predicate key="usage">OpenSense Nearest Neighbor Interpolation</predicate>
	</addressing>
	
	<storage history-size="1m" />
	<streams>
		<stream name="sensor1">	
			<source alias="zurich_co_vs" storage-size="1"  sampling-rate="1">
      <address wrapper="remote">
                          <predicate key="HOST">data.opensense.ethz.ch</predicate>
                          			<predicate key="PORT">80</predicate>
						<predicate key="local-contact-point">http://lsir-cloud.epfl.ch/gsn/streaming/</predicate>
						<predicate key="QUERY">select * from opensense_alphasense_co_gps</predicate>
				</address>
				<query>select  timed, sensor_ppm,latitude,longitude,ambient_temp from WRAPPER</query>
			</source>
			<query>
				select timed, sensor_ppm,latitude,longitude,ambient_temp  from zurich_co_vs	
			</query>
		</stream>
	</streams>
</virtual-sensor> 
