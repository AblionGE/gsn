<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.url">jdbc:h2:mem:gsn_mem_db</property>
        <property name="hibernate.connection.username"></property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        
        <property name="hibernate.current_session_context_class">thread</property>
        
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>

        <mapping package="gsn.beans.model"/>
        <mapping class="gsn.beans.model.DataNode"/>
        <mapping class="gsn.beans.model.QueryNode"/>
        <mapping class="gsn.beans.model.ModelNode"/>
        <mapping class="gsn.beans.model.DataModel"/>
        <mapping class="gsn.beans.model.OutputFormat"/>
        <mapping class="gsn.beans.model.Parameter"/>
        <mapping class="gsn.beans.model.ParameterModel"/>
        <mapping class="gsn.beans.model.VirtualSensor"/>
        <mapping class="gsn.beans.model.VirtualSensorProcessor"/>
        <mapping class="gsn.beans.model.VirtualSensorProcessorModel"/>
        <mapping class="gsn.beans.model.WebInput"/>
        <mapping class="gsn.beans.model.WebCommand"/>
        <mapping class="gsn.beans.model.BasicModel"/>
        <mapping class="gsn.beans.model.Window"/>
        <mapping class="gsn.beans.model.WindowModel"/>
        <mapping class="gsn.beans.model.Sliding"/>
        <mapping class="gsn.beans.model.SlidingModel"/>
        <mapping class="gsn.beans.model.Wrapper"/>
        <mapping class="gsn.beans.model.WrapperModel"/>
        
    </session-factory>
</hibernate-configuration>
