<virtual-sensor name="Rooftop_Webcam_1355" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorBackLog</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="deployment">rooftop</param>
        </init-params>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT" />
            <field name="FILEPATH" type="VARCHAR(255)" />
            <field name="DATA" type="binary" />
        </output-structure>
    </processing-class>
    <description>webcam picture from ETZ rooftop deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="deployment">permasense-etzl-bs01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.BinaryBridgePlugin</predicate>
                </address>
                <query> select * from wrapper</query>
            </source>
            <query> select * from source</query>
        </stream>
    </streams>
</virtual-sensor>
