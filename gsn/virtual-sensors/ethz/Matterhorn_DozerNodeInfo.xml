<virtual-sensor name="Matterhorn_DozerNodeInfo_1396" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT"/>
            <field name="GENERATIONTIME" type="BIGINT"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" />
            <field name="PAYLOAD_ID1" type="BIGINT" />
            <field name="PAYLOAD_ID2" type="BIGINT" />
            <field name="PAYLOAD_XE1205FREQUENCY" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerNodeInfoMsg) from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos1x.messages.DozerNodeInfoMsg</predicate>
                </address>
                <query> select TIMESTAMP, GENERATIONTIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, 
                    PAYLOAD_ID_LONGARRAY0 as PAYLOAD_ID1, 
                    PAYLOAD_ID_LONGARRAY1 as PAYLOAD_ID2, 
                    PAYLOAD_XE1205FREQUENCY from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
