<virtual-sensor name="Rooftop_DozerBaseDebug_mapped_chart_1396" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Radio Duty Cycle</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">%</param>
            <param name="history-size">1000</param>
            <param name="time-stream-name">GENERATIONTIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerBaseDebugMsg) from ETZ rooftop deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select GENERATIONTIME, PAYLOAD_RADIOSLEEP, PAYLOAD_RADIOUP from Rooftop_DozerBaseDebug_mapped_1396 </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select GENERATIONTIME, (100 * PAYLOAD_RADIOUP / (PAYLOAD_RADIOSLEEP + PAYLOAD_RADIOUP)) as RADIO_DUTYCYCLE from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
