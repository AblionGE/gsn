<virtual-sensor name="Thur_pos0_CoreStationStatus__chart2" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Basestation internal voltage health (7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">V</param>
            <param name="history-size">10080</param>
            <param name="time-stream-name">GENERATION_TIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>basestation health status from position 0 at Thur deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select GENERATION_TIME, VCC_5_0, VCC_NODE, VCC_4_2 from Thur_CoreStationStatus__conv__1823 where POSITION = 0</predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
