<virtual-sensor name="ETZ_pos0_CoreStationStatus__chart1" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Corestation V12DC voltage health (7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">V</param>
            <param name="history-size">10080</param>
            <param name="time-stream-name">GENERATION_TIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>Corestation health status from position 0 at ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense ETZ test deployment</predicate>
        <predicate key="LATITUDE">47.377326</predicate>
        <predicate key="LONGITUDE">8.552935</predicate>
    </addressing>
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select timed, GENERATION_TIME, V12DC_IN from ETZ_CoreStationStatus__mapped__1946</predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select * from wrapper where POSITION = 0 </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
