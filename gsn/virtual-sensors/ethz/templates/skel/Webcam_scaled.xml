<virtual-sensor name="@deployment@_Webcam_scaled_@rev_webcam@" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="timestamp_to_string">TIMESTAMP</param>
            <param name="jpeg_scaled">JPEG_SCALED</param>
        </init-params>
        <output-structure>
            <field name="TIMESTAMP_STRING" type="VARCHAR(30)" />
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>webcam picture from @deployment@ deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense @deployment@ deployment (webcam)</predicate>
        <predicate key="LATITUDE">@latitude_webcam@</predicate>
        <predicate key="LONGITUDE">@longitude_webcam@</predicate>
    </addressing>
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="@local_or_remote@">
                    <predicate key="query">select TIMESTAMP, DATA from @deployment@_Binary_@rev_binary@ where FILEPATH='/tmp/webcam.jpg'</predicate>
                    <predicate key="remote-contact-point">@remote_contact_point@</predicate>
                </address>
                <query> select TIMESTAMP, DATA as JPEG_SCALED from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
