<virtual-sensor name="@deployment@_DozerAdcComDiff_@rev_dozeradccomdiff_tinyos1x@" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT"/>
            <field name="GENERATIONTIME" type="BIGINT"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" />
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="PAYLOAD_A0" type="INTEGER" />
            <field name="PAYLOAD_A1" type="INTEGER" />
            <field name="PAYLOAD_A2" type="INTEGER" />
            <field name="PAYLOAD_A3" type="INTEGER" />
            <field name="PAYLOAD_ADIFF01_1" type="INTEGER" />
            <field name="PAYLOAD_ADIFF23_1" type="INTEGER" />
            <field name="PAYLOAD_ADIFF01_2" type="INTEGER" />
            <field name="PAYLOAD_ADIFF23_2" type="INTEGER" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerAdcComDiffMsg) from @deployment@ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos1x.messages.DozerAdcComDiffMsg</predicate>
                </address>
                <query> select TIMESTAMP, GENERATIONTIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, 
                    to_tinyint(PAYLOAD_SAMPLENO &gt;&gt; 15) as PAYLOAD_SAMPLE_VALID, 
                    to_smallint(PAYLOAD_SAMPLENO &amp; 32767) as PAYLOAD_SAMPLE_NO, 
                    NULL as PAYLOAD_A0,
                    PAYLOAD_SIBADCCOM0 as PAYLOAD_A1, 
                    PAYLOAD_SIBADCCOM1 as PAYLOAD_A2, 
                    PAYLOAD_SIBADCCOM2 as PAYLOAD_A3, 
                    PAYLOAD_SIBADCDIFF0 as PAYLOAD_ADIFF01_1, 
                    PAYLOAD_SIBADCDIFF1 as PAYLOAD_ADIFF23_1, 
                    PAYLOAD_SIBADCDIFF2 as PAYLOAD_ADIFF01_2,
                    PAYLOAD_SIBADCDIFF3 as PAYLOAD_ADIFF23_2 from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
