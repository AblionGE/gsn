<virtual-sensor name="@deployment@_DozerDigitalDCX_@rev_dozerdigitaldcx_tinyos1x@" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT"/>
            <field name="GENERATIONTIME" type="BIGINT"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" />
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="PAYLOAD_DCX_BATTERYSTATUS" type="SMALLINT" />
            <field name="PAYLOAD_DCX_STATUS0" type="SMALLINT" />
            <field name="PAYLOAD_DCX_STATUS1" type="SMALLINT" />
            <field name="PAYLOAD_DCX_STATUS2" type="SMALLINT" />
            <field name="PAYLOAD_DCX_STATUS3" type="SMALLINT" />
            <field name="PAYLOAD_DCX_FLOATVALUE0" type="DOUBLE" />
            <field name="PAYLOAD_DCX_FLOATVALUE1" type="DOUBLE" />
            <field name="PAYLOAD_DCX_FLOATVALUE2" type="DOUBLE" />
            <field name="PAYLOAD_DCX_FLOATVALUE3" type="DOUBLE" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerDigitalDCXMsg) from @deployment@ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos1x.messages.DozerDigitalDCXMsg</predicate>
                </address>
                <query> select TIMESTAMP, GENERATIONTIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, 
                    to_tinyint(PAYLOAD_SAMPLENO &gt;&gt; 15) as PAYLOAD_SAMPLE_VALID, 
                    to_smallint(PAYLOAD_SAMPLENO &amp; 32767) as PAYLOAD_SAMPLE_NO, 
                    PAYLOAD_BATTERYSTATUS as PAYLOAD_DCX_BATTERYSTATUS, 
                    PAYLOAD_DCXDATA_STATUS0 as PAYLOAD_DCX_STATUS0, 
                    PAYLOAD_DCXDATA_STATUS1 as PAYLOAD_DCX_STATUS1,
                    PAYLOAD_DCXDATA_STATUS2 as PAYLOAD_DCX_STATUS2,
                    PAYLOAD_DCXDATA_STATUS3 as PAYLOAD_DCX_STATUS3,
                    PAYLOAD_DCXDATA_FLOATARRAY0 as PAYLOAD_DCX_FLOATVALUE0, 
                    PAYLOAD_DCXDATA_FLOATARRAY1 as PAYLOAD_DCX_FLOATVALUE1,
                    PAYLOAD_DCXDATA_FLOATARRAY2 as PAYLOAD_DCX_FLOATVALUE2,
                    PAYLOAD_DCXDATA_FLOATARRAY3 as PAYLOAD_DCX_FLOATVALUE3 from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
