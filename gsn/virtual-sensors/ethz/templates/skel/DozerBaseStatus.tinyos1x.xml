<virtual-sensor name="@deployment@_DozerBaseStatus_@rev_dozerbasestatus_tinyos1x@" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT"/>
            <field name="GENERATIONTIME" type="BIGINT"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" />
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="PAYLOAD_UPTIME" type="INTEGER" />
            <field name="PAYLOAD_TEMPERATURE" type="INTEGER" />
            <field name="PAYLOAD_HUMIDITY" type="INTEGER" />
            <field name="PAYLOAD_MSPVOLTAGE" type="INTEGER" />
            <field name="PAYLOAD_MSPTEMPERATURE" type="INTEGER" />
            <field name="PAYLOAD_QUEUESIZE" type="SMALLINT" />
            <field name="PAYLOAD_PACKETSSENT" type="INTEGER" />
            <field name="PAYLOAD_PACKETSRECEIVED" type="INTEGER" />
            <field name="PAYLOAD_CHILDCOUNT" type="SMALLINT" />
            <field name="PAYLOAD_RSSI" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerBaseStatusMsg) from @deployment@ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos1x.messages.DozerBaseStatusMsg</predicate>
                </address>
                <query> select TIMESTAMP, GENERATIONTIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, 
                    to_tinyint(PAYLOAD_SAMPLENO &gt;&gt; 15) as PAYLOAD_SAMPLE_VALID, 
                    to_smallint(PAYLOAD_SAMPLENO &amp; 32767) as PAYLOAD_SAMPLE_NO, 
                    PAYLOAD_UPTIME, PAYLOAD_TEMPERATURE, PAYLOAD_HUMIDITY, PAYLOAD_MSPVOLTAGE, PAYLOAD_MSPTEMPERATURE, 
                    PAYLOAD_QUEUESIZE, PAYLOAD_PACKETSSENT, PAYLOAD_PACKETSRECEIVED, PAYLOAD_CHILDCOUNT, PAYLOAD_RSSI from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
