<virtual-sensor name="ETZ_pos2_Camera_scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.FileGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="file_type">nef</param>
        </init-params>
        <output-structure>
            <field name="MODIFICATIONTIME" type="BIGINT" unit="unixtime" />
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>camera pictures from position 2 at ETZ deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select MODIFICATIONTIME, RELATIVEFILE, STORAGEDIRECTORY from ETZ_all_Binary_1743 where POSITION = 2 and RELATIVEFILE like 'camera1/%'</predicate>
                </address>
                <query> select MODIFICATIONTIME, concat(STORAGEDIRECTORY,RELATIVEFILE) as FILE from wrapper</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
