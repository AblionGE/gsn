<virtual-sensor name="Matterhorn_Sensorrod_pos8_chart3" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Sensorrod reference temperatures (Position 8, 7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">â„ƒ</param>
            <param name="history-size">5020</param>
            <param name="time-stream-name">GENERATIONTIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>Sensorrod/SR data (merged) from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <!-- pos8 only generates 65535/null values as far -->
                    <predicate key="query"> select GENERATIONTIME, SR_REF1, SR_REF2, SR_REF3, SR_REF4, SR_REF5, SR_REF6 from Matterhorn_Sensorrod_1396 where POSITION = 8 and PAYLOAD_SAMPLE_VALID != 0 </predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
