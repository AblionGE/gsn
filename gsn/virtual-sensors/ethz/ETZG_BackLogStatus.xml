<virtual-sensor name="ETZG_BackLogStatus_1355" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <web-input password="test">
            <command name="backlog">
                <field name="core_station_id" type="*text">core_station_id</field>
                <field name="resend_data" type="checkbox:resend" >resend all backlogged data</field>
            </command>
        </web-input>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT" />
            <field name="CORE_STATION_ID" type="INTEGER" />
            <field name="ERROR_COUNTER" type="INTEGER" />
            <field name="EXCEPTION_COUNTER" type="INTEGER" />
            <field name="BACKLOG_DB_ENTRIES" type="INTEGER" />
            <field name="BACKLOG_DB_SIZE_KB" type="INTEGER" />
            <field name="IN_COUNTER" type="INTEGER" />
            <field name="OUT_COUNTER" type="INTEGER" />
            <field name="BACKLOG_COUNTER" type="INTEGER" />
            <field name="CONNECTION_LOSSES" type="INTEGER" />
        </output-structure>
    </processing-class>
    <description>show status information of PSBackLog and send commands to the ETZG deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source name="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">82.130.103.18:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.BackLogStatusPlugin</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
        </stream>
        <stream name="data2">
            <source name="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-etzg-bs01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.BackLogStatusPlugin</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
