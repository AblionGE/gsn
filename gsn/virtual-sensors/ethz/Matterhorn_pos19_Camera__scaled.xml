<virtual-sensor name="Matterhorn_pos19_Camera__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.FileGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="file_type">nef</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>camera pictures from position 19 at Matterhorn deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Matterhorn deployment</predicate>
        <predicate key="LATITUDE">45.980126</predicate>
        <predicate key="LONGITUDE">7.670109</predicate>
    </addressing>
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select GENERATION_TIME, RELATIVE_FILE, STORAGE_DIRECTORY from Matterhorn_Binary__mapped__1950 where POSITION = 19 and RELATIVE_FILE like 'camera1/%'</predicate>
                </address>
                <query> select GENERATION_TIME, concat(STORAGE_DIRECTORY,RELATIVE_FILE) as FILE from wrapper</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
