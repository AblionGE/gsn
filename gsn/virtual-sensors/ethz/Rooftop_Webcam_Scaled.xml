<virtual-sensor name="Rooftop_Webcam_Scaled_1355" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="timestamp_to_string">TIMESTAMP</param>
            <param name="jpeg_scaled">JPEG_SCALED</param>
        </init-params>
        <output-structure>
            <field name="TIMESTAMP_STRING" type="VARCHAR(30)" />
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>webcam picture from ETZ rooftop deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense rooftop deployment at ETH Zurich (webcam)</predicate>
        <predicate key="LATITUDE">47.377365</predicate>
        <predicate key="LONGITUDE">8.552879</predicate>
    </addressing>
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select TIMESTAMP, DATA from Rooftop_Binary_1355 where FILEPATH='/tmp/webcam.jpg'</predicate>
                </address>
                <query> select TIMESTAMP, DATA as JPEG_SCALED from wrapper</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
