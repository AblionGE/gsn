<virtual-sensor name="Thur_pos0_Webcam__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>webcam pictures from position 0 at Thur deployment as thumbnails</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Thur deployment</predicate>
        <predicate key="LATITUDE">47.589889</predicate>
        <predicate key="LONGITUDE">8.773874</predicate>
    </addressing>
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select GENERATION_TIME, DATA from Thur_Binary__mapped__1950 where POSITION = 0 and RELATIVE_FILE like 'webcam1/%'</predicate>
                </address>
                <query> select GENERATION_TIME, DATA as JPEG_SCALED from wrapper</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
