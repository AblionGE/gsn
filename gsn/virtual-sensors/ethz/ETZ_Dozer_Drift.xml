<virtual-sensor name="ETZ_Dozer_Drift__1750" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="GENERATIONTIME" type="BIGINT" unit="unixtime"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" />
            <field name="PAYLOAD_MYTEMP0" type="INTEGER" />
            <field name="PAYLOAD_MYTEMP1" type="INTEGER" />
            <field name="PAYLOAD_MYTEMP2" type="INTEGER" />
            <field name="PAYLOAD_PARENTTEMP0" type="INTEGER" />
            <field name="PAYLOAD_PARENTTEMP1" type="INTEGER" />
            <field name="PAYLOAD_PARENTTEMP2" type="INTEGER" />
            <field name="PAYLOAD_DRIFTPPM0" type="SMALLINT" />
            <field name="PAYLOAD_DRIFTPPM1" type="SMALLINT" />
            <field name="PAYLOAD_DRIFTPPM2" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerDriftMsg) from ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-etzg-bs01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos2x.messages.DozerDriftMsg</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-etzl-bs01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos2x.messages.DozerDriftMsg</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
