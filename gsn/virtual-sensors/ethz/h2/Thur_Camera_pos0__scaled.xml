<virtual-sensor name="Thur_Camera_pos0__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.JpegGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="file_type">jpeg</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>webcam pictures from position 0 at Thur deployment as thumbnails</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Thur deployment</predicate>
        <predicate key="LONGITUDE">8.773881132</predicate>
        <predicate key="LATITUDE">47.590297861</predicate>
        <predicate key="ALTITUDE">10</predicate>
        <predicate key="HEADING">24.28</predicate>
        <predicate key="TILT">80.98</predicate>
        <predicate key="ROLL">0</predicate>
        <predicate key="HORFOV">55</predicate>
        <predicate key="VERFOV">46.965</predicate>
        <predicate key="NEAR">1.61</predicate>
    </addressing>
    <storage storage-directory="/home/perma/permasense_vault/gsn-binaries/" history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE, FILE_COMPLETE from Thur_Binary__mapped where RELATIVE_FILE like 'webcam1/%'</predicate>
                </address>
                <query> select timed, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE from wrapper where FILE_COMPLETE = 1 and POSITION = 0</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
