<virtual-sensor name="OpenSense_BackLogStatus_Static" priority="10" statistics="true" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <web-input password="test">
            <command name="resend_backlogged_data">
                <field name="core_station" type="*text" defaultvalue="65535">the device_id of the receiving core station</field>
            </command>
        </web-input>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            
            <field name="PYTHON_IMPLEMENTATION" type="VARCHAR(255)" />
            <field name="PYTHON_VERSION" type="VARCHAR(255)" />
            <field name="PYTHON_COMPILER" type="VARCHAR(255)" />
            <field name="PYTHON_BUILD" type="VARCHAR(255)" />
            <field name="PYTHON_BUILD_DATE" type="VARCHAR(255)" />
            <field name="LAST_CLEAN_SHUTDOWN" type="BIGINT" unit="unixtime" />
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>show static status information of the BackLogs and send commands of the OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">OpenSense deployment</predicate>
        <predicate key="LATITUDE">47.377326</predicate>
        <predicate key="LONGITUDE">8.552935</predicate>
    </addressing>
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <!--predicate key="remote-connection">opensense-etz-bs01.ethz.ch:9003</predicate-->
                    <predicate key="remote-connection">opensense-caa-etz-1.dyndns.biz:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.BackLogStatusPlugin</predicate>
                    <predicate key="status-data-type">static</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">opensense-etz-bs02.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.BackLogStatusPlugin</predicate>
                    <predicate key="status-data-type">static</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        </streams>
</virtual-sensor>
