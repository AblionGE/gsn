<virtual-sensor name="OSTest_OZ47_Init_Calibration" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
    		<init-params>
            <param name="persistant">true</param>
	    	<param name="scriptlet">
	    	<![CDATA[
	    		
					try {
					
					 def a_0 = 3.635901;
					 def a_1 = 0.026868;
					 def kT = 0.0199999995529652;
					
					 OZONE_PPB = OZONE_SENSOR_1 * Math.exp(kT * (TEMPERATURE-25));
					 
					}catch(Throwable e){
						org.apache.log4j.Logger.getLogger(gsn.processor.ScriptletProcessor.class).error(e);
					}
				]]>
	    	</param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="OZONE_PPB" type="DOUBLE" unit="ppb"/>
            <field name="SENSOR_ID" type="INTEGER"/>
            <field name="MEASUREMENT_ID" type="BIGINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>initial calibration of ozone sensor from the OSTest deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OSTest_OZ47_Dynamic__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper where POSITION = 3 and GENERATION_TIME > 1317621600000 </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
