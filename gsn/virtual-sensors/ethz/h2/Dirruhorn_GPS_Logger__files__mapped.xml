<virtual-sensor name="Dirruhorn_GPS_Logger__files__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="position_mapping" />
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            
			<field name="SENSOR_TYPE" type="VARCHAR(16)" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="RELATIVE_FILE1" type="VARCHAR(255)"/>
            <field name="SIZE_FILE1" type="BIGINT" unit="bytes"/>
            <field name="RAW_STATUS_DATA" type="binary" data-path-field="RELATIVE_FILE1" />
            <field name="RELATIVE_FILE2" type="VARCHAR(255)"/>
            <field name="SIZE_FILE2" type="BIGINT" unit="bytes"/>
            <field name="EVENT_DATA" type="binary" data-path-field="RELATIVE_FILE2" />
            <field name="RELATIVE_FILE3" type="VARCHAR(255)"/>
            <field name="SIZE_FILE3" type="BIGINT" unit="bytes"/>
            <field name="CONFIGURATION_DATA" type="binary" data-path-field="RELATIVE_FILE3" />
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>GPS Logger files from Dirruhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage storage-directory="/home/perma/permasense_vault/gsn-binaries/" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="remote-rest">
                    <predicate key="query"> select * from Dirruhorn_GPS_Logger__files</predicate>
                    <predicate key="remote-contact-point">http://whymper.ee.ethz.ch:22001/streaming/</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
