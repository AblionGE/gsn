<virtual-sensor name="Dirruhorn_GPS_Logger__status" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" index="true"/>
            <field name="GSN_TIMESTAMP" type="BIGINT" unit="unixtime" index="true" />
            
			<field name="SENSOR_TYPE" type="VARCHAR(16)" />
		    <field name="SAMPLE_COUNT" type="INTEGER"/>
			<field name="V12DC_IN" type="INTEGER" unit="mV"/>
			<field name="HUMIDITY" type="INTEGER" unit="%"/>
			<field name="TEMPERATURE" type="SMALLINT" unit="Â°C"/>
			<field name="INCLINOMETER_X" type="SMALLINT"/>
			<field name="INCLINOMETER_Y" type="SMALLINT"/>
            <field name="RAW_DATA" type="BINARY"/>
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>GPS Logger status information from Dirruhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from Dirruhorn_GPS_Logger__data__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP, GSN_TIMESTAMP, SENSOR_TYPE, SAMPLE_COUNT, STATUS_V12DC_IN as V12DC_IN, STATUS_HUMIDITY as HUMIDITY, STATUS_TEMPERATURE as TEMPERATURE, STATUS_INCLINOMETER_X as INCLINOMETER_X, STATUS_INCLINOMETER_Y as INCLINOMETER_Y, RAW_DATA from wrapper where data_type = 1</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
