<virtual-sensor name="ETZ_pos2_Camera__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.FileGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="file_type">nef</param>
            <param name="nef_extraction_type">thumbnail</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>camera pictures from position 2 at ETZ deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="LONGITUDE">8.552661</predicate>
        <predicate key="LATITUDE">47.377982</predicate>
        <predicate key="ALTITUDE">4</predicate>
        <predicate key="HEADING">316.27</predicate>
        <predicate key="TILT">95.54</predicate>
        <predicate key="ROLL">0</predicate>
        <predicate key="HORFOV">55</predicate>
        <predicate key="VERFOV">46.965</predicate>
        <predicate key="NEAR">1.61</predicate>
    </addressing>
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, GENERATION_TIME, RELATIVE_FILE, STORAGE_DIRECTORY from ETZ_Binary__mapped where RELATIVE_FILE like 'camera1/%'</predicate>
                </address>
                <query> select timed, GENERATION_TIME, concat(STORAGE_DIRECTORY,RELATIVE_FILE) as FILE from wrapper where POSITION = 2</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
