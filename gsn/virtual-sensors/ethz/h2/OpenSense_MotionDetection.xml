<virtual-sensor name="OpenSense_MotionDetection" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            
            <field name="THRESHOLD_RAW_DATA" type="DOUBLE" />
            <field name="POLL_INT_RAW_DATA" type="DOUBLE" />
            <field name="POLL_DURATION_RAW_DATA" type="DOUBLE" />
            <field name="STD_X_RAW_DATA" type="DOUBLE" />
            <field name="STD_Y_RAW_DATA" type="DOUBLE" />
            <field name="STD_Z_RAW_DATA" type="DOUBLE" />
            <field name="MOVING_RAW_DATA" type="INTEGER" />
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>detect vehicle's motion from the OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        
        <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">opensense-caa-due-1.dyndns.biz:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MotionDetectionPlugin</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>

        
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">opensense-caa-tram-1.dyndns.biz:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MotionDetectionPlugin</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
