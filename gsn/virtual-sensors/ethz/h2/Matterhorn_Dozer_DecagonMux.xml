<virtual-sensor name="Matterhorn_Dozer_DecagonMux" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="PAYLOAD_DATA_CONDUCTIVITY0" type="SMALLINT" />
            <field name="PAYLOAD_DATA_DIELECTRIC0" type="SMALLINT" />
            <field name="PAYLOAD_DATA_TEMPERATURE0" type="SMALLINT" />
            <field name="PAYLOAD_MUX_VALID0" type="TINYINT" />
            <field name="PAYLOAD_DATA_CONDUCTIVITY1" type="SMALLINT" />
            <field name="PAYLOAD_DATA_DIELECTRIC1" type="SMALLINT" />
            <field name="PAYLOAD_DATA_TEMPERATURE1" type="SMALLINT" />
            <field name="PAYLOAD_MUX_VALID1" type="TINYINT" />
            <field name="PAYLOAD_DATA_CONDUCTIVITY2" type="SMALLINT" />
            <field name="PAYLOAD_DATA_DIELECTRIC2" type="SMALLINT" />
            <field name="PAYLOAD_DATA_TEMPERATURE2" type="SMALLINT" />
            <field name="PAYLOAD_MUX_VALID2" type="TINYINT" />
            <field name="PAYLOAD_DATA_CONDUCTIVITY3" type="SMALLINT" />
            <field name="PAYLOAD_DATA_DIELECTRIC3" type="SMALLINT" />
            <field name="PAYLOAD_DATA_TEMPERATURE3" type="SMALLINT" />
            <field name="PAYLOAD_MUX_VALID3" type="TINYINT" />
            <field name="PAYLOAD_DATA_CONDUCTIVITY4" type="SMALLINT" />
            <field name="PAYLOAD_DATA_DIELECTRIC4" type="SMALLINT" />
            <field name="PAYLOAD_DATA_TEMPERATURE4" type="SMALLINT" />
            <field name="PAYLOAD_MUX_VALID4" type="TINYINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerDecagonMuxMsg) from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-mh-bs01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos2x.messages.DozerDecagonMuxMsg</predicate>
                </address>
                <!--query> select * from wrapper </query -->
                <query> select TIMESTAMP, GENERATION_TIME, DEVICE_ID, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, PAYLOAD_SAMPLE_VALID, PAYLOAD_SAMPLE_NO, 
                     PAYLOAD_DATA_CONDUCTIVITY0, PAYLOAD_DATA_DIELECTRIC0, PAYLOAD_DATA_TEMPERATURE0, PAYLOAD_MUX_VALID0,
                     PAYLOAD_DATA_CONDUCTIVITY1, PAYLOAD_DATA_DIELECTRIC1, PAYLOAD_DATA_TEMPERATURE1, PAYLOAD_MUX_VALID1,
                     PAYLOAD_DATA_CONDUCTIVITY2, PAYLOAD_DATA_DIELECTRIC2, PAYLOAD_DATA_TEMPERATURE2, PAYLOAD_MUX_VALID2,
                     PAYLOAD_DATA_CONDUCTIVITY3, PAYLOAD_DATA_DIELECTRIC3, PAYLOAD_DATA_TEMPERATURE3, PAYLOAD_MUX_VALID3,
                     PAYLOAD_DATA_CONDUCTIVITY4, PAYLOAD_DATA_DIELECTRIC4, PAYLOAD_DATA_TEMPERATURE4, PAYLOAD_MUX_VALID4
                     from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>

        <stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-mh-bs02.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos2x.messages.DozerDecagonMuxMsg</predicate>
                </address>
                <!--query> select * from wrapper </query -->
                <query> select TIMESTAMP, GENERATION_TIME, DEVICE_ID, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, PAYLOAD_SAMPLE_VALID, PAYLOAD_SAMPLE_NO, 
                     PAYLOAD_DATA_CONDUCTIVITY0, PAYLOAD_DATA_DIELECTRIC0, PAYLOAD_DATA_TEMPERATURE0, PAYLOAD_MUX_VALID0,
                     PAYLOAD_DATA_CONDUCTIVITY1, PAYLOAD_DATA_DIELECTRIC1, PAYLOAD_DATA_TEMPERATURE1, PAYLOAD_MUX_VALID1,
                     PAYLOAD_DATA_CONDUCTIVITY2, PAYLOAD_DATA_DIELECTRIC2, PAYLOAD_DATA_TEMPERATURE2, PAYLOAD_MUX_VALID2,
                     PAYLOAD_DATA_CONDUCTIVITY3, PAYLOAD_DATA_DIELECTRIC3, PAYLOAD_DATA_TEMPERATURE3, PAYLOAD_MUX_VALID3,
                     PAYLOAD_DATA_CONDUCTIVITY4, PAYLOAD_DATA_DIELECTRIC4, PAYLOAD_DATA_TEMPERATURE4, PAYLOAD_MUX_VALID4
                     from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
