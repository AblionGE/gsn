<virtual-sensor name="Glaciers_BackLogStatus_Revision__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="position_mapping" />
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />

            <field name="FILE_REVISION" type="VARCHAR(255)" />
            <field name="FILE_MD5" type="VARCHAR(255)" />
			
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>file revision status information of BackLog from Glaciers deployment</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Glaciers deployment</predicate>
        <predicate key="LATITUDE">46.590496</predicate>
        <predicate key="LONGITUDE">8.377630</predicate>
    </addressing>
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="remote-rest">
                    <predicate key="query">select * from Glaciers_BackLogStatus_Revision</predicate>
                    <predicate key="remote-contact-point">http://yosemite.ee.ethz.ch:22001/streaming/</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
