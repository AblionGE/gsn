<virtual-sensor name="Weissmies_Statistics" priority="10" statistics="false" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            
			<field name="CONNECTED" type="TINYINT" />
			
			<field name="IN_TOTAL_COUNTER" type="BIGINT" />
			<field name="IN_TOTAL_STUFFED" type="BIGINT" unit="bytes" />
			<field name="IN_TOTAL_UNSTUFFED" type="BIGINT" unit="bytes" />
			<field name="OUT_TOTAL_COUNTER" type="BIGINT" />
			<field name="OUT_TOTAL_STUFFED" type="BIGINT" unit="bytes" />
			<field name="OUT_TOTAL_UNSTUFFED" type="BIGINT" unit="bytes" />
			
			<field name="IN_ACK_COUNTER" type="BIGINT" />
			<field name="IN_ACK_VOLUME" type="BIGINT" unit="bytes" />
			<field name="IN_PING_COUNTER" type="BIGINT" />
			<field name="IN_PING_VOLUME" type="BIGINT" unit="bytes" />
			<field name="IN_PING_ACK_COUNTER" type="BIGINT" />
			<field name="IN_PING_ACK_VOLUME" type="BIGINT" unit="bytes" />
			
			<field name="OUT_ACK_COUNTER" type="BIGINT" />
			<field name="OUT_ACK_VOLUME" type="BIGINT" unit="bytes" />
			<field name="OUT_PING_COUNTER" type="BIGINT" />
			<field name="OUT_PING_VOLUME" type="BIGINT" unit="bytes" />
			<field name="OUT_PING_ACK_COUNTER" type="BIGINT" />
			<field name="OUT_PING_ACK_VOLUME" type="BIGINT" unit="bytes" />
			
			<field name="OUT_QUEUE_LIMIT_COUNTER" type="BIGINT" />
			<field name="OUT_QUEUE_LIMIT_VOLUME" type="BIGINT" unit="bytes" />
			<field name="OUT_QUEUE_READY_COUNTER" type="BIGINT" />
			<field name="OUT_QUEUE_READY_VOLUME" type="BIGINT" unit="bytes" />
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>show statistics of the Weissmies deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
		<stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog-stats">
                    <predicate key="sampling-rate">30</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
