<virtual-sensor name="Matterhorn_pos7_Earthpressure__chart1" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Earthpressure pressure (Position 7, 7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">mbar</param>
            <param name="history-size">5020</param>
            <param name="time-stream-name">GENERATION_TIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>Earthpressure/NEPN data from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select timed, POSITION, GENERATION_TIME, PAYLOAD_SAMPLE_VALID, NEPN_P1 from Matterhorn_Earthpressure__nepn__1950 </predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select GENERATION_TIME, NEPN_P1 from wrapper where POSITION = 7 and PAYLOAD_SAMPLE_VALID != 0 and GENERATION_TIME >= (TIMESTAMPDIFF(second, 1970-01-01, NOW()) * 1000) - 604800000 </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
