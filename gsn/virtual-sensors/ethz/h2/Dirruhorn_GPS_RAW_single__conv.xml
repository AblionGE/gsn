<virtual-sensor name="Dirruhorn_GPS_RAW_single__conv" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="gps_time_conversion" />
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="GSN_TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="GPS_UNIXTIME" type="BIGINT" unit="unixtime" />
	    <field name="SENSOR_TYPE" type="VARCHAR(16)" />
            <field name="GPS_RAW_DATA_VERSION" type="SMALLINT"/>
	    <field name="GPS_SAMPLE_COUNT" type="INTEGER"/>
	    <field name="GPS_SATS" type="INTEGER"/>
            <field name="GPS_TIME" type="INTEGER"/>
            <field name="GPS_WEEK" type="SMALLINT" />
            <field name="CARRIER_PHASE" type="DOUBLE" />
            <field name="PSEUDO_RANGE" type="DOUBLE" />
            <field name="DOPPLER" type="DOUBLE" />
            <field name="SPACE_VEHICLE" type="SMALLINT" />
            <field name="MEASUREMENT_QUALITY" type="SMALLINT" />
            <field name="SIGNAL_STRENGTH" type="SMALLINT" />
            <field name="LLI" type="SMALLINT" />
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>GPS RAW data displayed in ASCII and per satellite from Dirruhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from dirruhorn_gps_raw_single__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
               <!--<query> select POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP, GSN_TIMESTAMP, SENSOR_TYPE, GPS_RAW_DATA_VERSION, GPS_SAMPLE_COUNT, GPS_SATS, GPS_RAW_DATA from wrapper </query>-->
		<query>select * from wrapper</query>
            </source>
            <query> select * from source </query>
        </stream>
	<stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from dirruhorn_dozer_gpsdata__conv</predicate>
                   <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, timed as GSN_TIMESTAMP, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP, SENSOR_TYPE, GPS_RAW_DATA_VERSION, header_seqnr as GPS_SAMPLE_COUNT, payload_timeofweekms as GPS_TIME, payload_vehiclenum as SPACE_VEHICLE, payload_measindicator as MEASUREMENT_QUALITY, payload_losslockindicator as LLI, carrierphase as CARRIER_PHASE, pseudorange as PSEUDO_RANGE, doppler as DOPPLER, payload_weeknumber as GPS_WEEK, payload_signalstrength as SIGNAL_STRENGTH, DATA_IMPORT_SOURCE from wrapper</query>
            </source>
            <query> select * from source </query>
        </stream>

    </streams>
</virtual-sensor>
