<virtual-sensor name="ETZ_IButton_Upload" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <web-input password="test">
            <command name="upload">
                <field name="payload_type" type="*select:Mission data,0|Temperature meas.,1|Humidity meas.,2">select payload type</field>
                <field name="payload" type="*text">CSV data in corresponding format</field>
            </command>
        </web-input>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="PAYLOAD_TYPE" type="SMALLINT" />
            <field name="PAYLOAD" type="BINARY" />
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Upload of iButton data, used for synchronization with smartphones</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="ibutton" />
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
   </streams>
</virtual-sensor>
