<virtual-sensor name="OSTest_CoreStationStatus_Static__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="position_mapping" />
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            
            <field name="OS" type="VARCHAR(255)" />
            <field name="HOSTNAME" type="VARCHAR(255)" />
            <field name="KERNEL_VERSION" type="VARCHAR(255)" />
            <field name="KERNEL_COMPILED_BY" type="VARCHAR(255)" />
            <field name="GCC_VERSION" type="VARCHAR(255)" />
            <field name="KERNEL_COMPILE_TIME" type="VARCHAR(255)" />
            <field name="PROCESSOR" type="VARCHAR(255)" />
            <field name="DISTRIBUTION_NAME" type="VARCHAR(255)" />
            <field name="DISTRIBUTION_VERSION" type="VARCHAR(255)" />
        </output-structure>
    </processing-class>
    <description>CoreStation static status from OSTest deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="remote-rest">
                    <predicate key="query"> select * from OSTest_CoreStationStatus_Static</predicate>
                    <predicate key="remote-contact-point">http://whymper.ethz.ch:23001/streaming/</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
