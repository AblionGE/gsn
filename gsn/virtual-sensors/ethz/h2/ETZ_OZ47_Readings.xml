<virtual-sensor name="ETZ_OZ47_READINGS" priority="10" statistics="true" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="OZONE_SENSOR_1" type="INTEGER" unit="ppb"/>
            <field name="OZONE_SENSOR_2" type="INTEGER" unit="ppb"/>
            <field name="RESISTANCE_1" type="INTEGER" unit="kOhm"/>
            <field name="RESISTANCE_2" type="INTEGER" unit="kOhm"/>
            <field name="TEMPERATURE" type="DOUBLE" unit="C"/>
            <field name="HUMIDITY" type="INTEGER" unit="%"/>
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>OZ-47 sensor reading from ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <!--predicate key="remote-connection">opensense-etz-bs01.ethz.ch:9003</predicate-->
                    <predicate key="remote-connection">opensense-caa-etz-1.dyndns.biz:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.OZ47Plugin</predicate>
                    <predicate key="status-data-type">readings</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
	<stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">opensense-etz-bs02.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.OZ47Plugin</predicate>
                    <predicate key="status-data-type">readings</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
