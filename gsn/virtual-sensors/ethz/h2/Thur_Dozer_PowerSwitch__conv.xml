<virtual-sensor name="Thur_Dozer_PowerSwitch__conv" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="V12EXT" type="VARCHAR(30)" unit="V" />
            <field name="I12EXT" type="VARCHAR(30)" unit="mA" />
            <field name="IPORT1" type="VARCHAR(30)" unit="mA" />
            <field name="IPORT2" type="VARCHAR(30)" unit="mA" />
            <field name="PAYLOAD_PORT1ON" type="TINYINT" />
            <field name="PAYLOAD_PORT2ON" type="TINYINT" />
            <field name="PAYLOAD_POWERSTATE" type="TINYINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerPowerSwitchMsg) from Thur deployment converted</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Thur_Dozer_PowerSwitch__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, PAYLOAD_SAMPLE_VALID, PAYLOAD_SAMPLE_NO,
                cast(round(PAYLOAD_V12EXT * (1.5/4095) * 12, 2) as CHAR(30)) as V12EXT,
                cast(round(PAYLOAD_I12EXT * (1.5/4095) * 10 / 0.001,2) as CHAR(30)) as I12EXT,
                cast(round(PAYLOAD_IPORT1 * (1.5/4095) * 10 / 0.001,2) as CHAR(30)) as IPORT1,
                cast(round(PAYLOAD_IPORT2 * (1.5/4095) * 10 / 0.001,2) as CHAR(30)) as IPORT2,
                PAYLOAD_PORT1ON, PAYLOAD_PORT2ON, PAYLOAD_POWERSTATE
                from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
