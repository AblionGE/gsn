<virtual-sensor name="ETZ_Dozer_WgpsStatus__conv" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="gps_time_conversion" />
        </init-params>      
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="GPS_UNIXTIME" type="BIGINT" unit="unixtime" />
            
            <field name="SENSORTYPE" type="VARCHAR(100)" />
            <field name="SENSORTYPE_SERIALID" type="BIGINT" />
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="INCLINOMETER_X" type="VARCHAR(30)" unit="°" />
            <field name="INCLINOMETER_Y" type="VARCHAR(30)" unit="°" />
            <field name="GPSVOLTAGE" type="VARCHAR(30)" unit="V"/>
            <field name="GPSCURRENT" type="VARCHAR(30)" unit="mA"/>
            <field name="SAM7CURRENT" type="VARCHAR(30)" unit="mA"/>
            <field name="TNCURRENT" type="VARCHAR(30)" unit="mA"/>
            <field name="GPS_TIME" type="INTEGER" />
            <field name="GPS_WEEK" type="SMALLINT" />
            <field name="NUM_SV" type="TINYINT" />
            <field name="CRC" type="INTEGER" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerWgpsStatusMsg) from ETZ deployment converted</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from ETZ_Dozer_WgpsStatus__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP, SENSORTYPE, SENSORTYPE_SERIALID, HEADER_SEQNR,
                HEADER_ORIGINATORID, HEADER_ATIME, PAYLOAD_SAMPLE_VALID, PAYLOAD_SAMPLE_NO,
                PAYLOAD_GPSTIME as GPS_TIME, PAYLOAD_GPSWEEK as GPS_WEEK, PAYLOAD_NUMSV as NUM_SV, PAYLOAD_CRC as CRC,
                cast(round((PAYLOAD_INCLINOMETERX / 32768.0) * 90.0, 3) as CHAR(30)) as INCLINOMETER_X,
                cast(round((PAYLOAD_INCLINOMETERY / 32768.0) * 90.0 , 3) as CHAR(30)) as INCLINOMETER_Y,
                cast(round(PAYLOAD_GPSVOLTAGE * (1.5/4096.0) * (57.0/24.0), 3) as CHAR(30)) as GPSVOLTAGE,
                cast(round(PAYLOAD_GPSCURRENT * (1.5/4096.0) * (10.0/0.15), 3) as CHAR(30)) as GPSCURRENT,
                cast(round(PAYLOAD_SAM7CURRENT * (1.5/4096.0) * (10.0/0.15), 3) as CHAR(30)) as SAM7CURRENT,
                cast(round(PAYLOAD_TNCURRENT * (1.5/4096.0) * (10.0/0.15), 3) as CHAR(30)) as TNCURRENT from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
