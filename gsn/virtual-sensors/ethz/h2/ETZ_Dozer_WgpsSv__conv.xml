<virtual-sensor name="ETZ_Dozer_WgpsSv__conv" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="persistant">true</param>
            <param name="scriptlet">
                <![CDATA[
                	try {
                		CARRIERPHASE = Double.longBitsToDouble(PAYLOAD_CARRIERPHASE);

	                	PSEUDORANGE = Double.longBitsToDouble(PAYLOAD_PSEUDORANGE);

	                	DOPPLER = (double) Float.intBitsToFloat(PAYLOAD_DOPPLER);
                				
			        	MEASUREMENT_QUALITY = (short)(PAYLOAD_LLIANDMQI & 0x3F);
			        	LOSS_OF_LOCK = (short)(PAYLOAD_LLIANDMQI >> 6);
					} catch(Throwable e) {
						org.apache.log4j.Logger.getLogger(gsn.processor.ScriptletProcessor.class).error(e);
					}
                ]]>
            </param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="GPS_UNIXTIME" type="BIGINT" unit="unixtime" />
            
            <field name="SENSORTYPE" type="VARCHAR(100)" />
            <field name="SENSORTYPE_SERIALID" type="BIGINT" />
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_SV" type="SMALLINT" />
            <field name="PAYLOAD_SIGNALSTRENGTH" type="TINYINT" />
            <field name="CARRIERPHASE" type="DOUBLE" />
            <field name="PSEUDORANGE" type="DOUBLE" />
            <field name="DOPPLER" type="DOUBLE" />
            <field name="MEASUREMENT_QUALITY" type="SMALLINT" />
            <field name="LOSS_OF_LOCK" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerWgpsSvMsg) from ETZ deployment converted</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from ETZ_Dozer_WgpsSv__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
