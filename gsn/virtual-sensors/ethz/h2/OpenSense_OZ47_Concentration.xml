<virtual-sensor name="OpenSense_OZ47_Concentration" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.OZ47Concentration</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            
		    		<field name="OZONE_PPB" type="DOUBLE" unit="ppb" />
		    		
		    		<field name="CALIB_PARAM_0" type="DOUBLE" />
		    		<field name="CALIB_PARAM_1" type="DOUBLE" />
		    		
		    		<field name="MEASUREMENT_ID" type="BIGINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>OZ47 calibration based on reliable measurements from OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
   <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OpenSense_OZ47_Dynamic__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper where RESISTANCE_1 > 0 and POSITION = 1 and SENSOR_ID = 2</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
