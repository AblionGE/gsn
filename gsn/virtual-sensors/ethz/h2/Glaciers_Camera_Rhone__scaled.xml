<virtual-sensor name="Glaciers_Camera_Rhone__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.FileGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="file_type">jpeg</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>camera pictures from Rhone (position 0) at Glaciers deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Glaciers deployment</predicate>
        <predicate key="LATITUDE">46.590199</predicate>
        <predicate key="LONGITUDE">8.377573</predicate>
        <predicate key="ALTITUDE">170.0</predicate>
        <predicate key="HEADING">30.0</predicate>
        <predicate key="TILT">104.5097921306319</predicate>
        <predicate key="ROLL">-1.670011136226304</predicate>
        <predicate key="HORFOV">13.91</predicate>
        <predicate key="VERFOV">20.455</predicate>
        <predicate key="NEAR">9.821</predicate>
    </addressing>
    <storage storage-directory="/home/perma/permasense_vault/gsn-binaries/" history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE, FILE_COMPLETE from Glaciers_Binary__mapped where RELATIVE_FILE like 'camera1_previews/%'</predicate>
                </address>
                <query> select timed, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE from wrapper where FILE_COMPLETE = 1 and POSITION = 0</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
