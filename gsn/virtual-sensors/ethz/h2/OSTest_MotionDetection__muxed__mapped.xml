<virtual-sensor name="OSTest_MotionDetection__muxed__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="position_mapping" />
        </init-params>
        <output-structure>
        		<field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="THRESHOLD_RAW_DATA" type="DOUBLE" />
            <field name="POLL_INT_RAW_DATA" type="DOUBLE" />
            <field name="POLL_DURATION_RAW_DATA" type="DOUBLE" />
            <field name="STD_X_RAW_DATA" type="DOUBLE" />
            <field name="STD_Y_RAW_DATA" type="DOUBLE" />
            <field name="STD_Z_RAW_DATA" type="DOUBLE" />
            <field name="MOVING_RAW_DATA" type="INTEGER" />
        </output-structure>
    </processing-class>
    <description>detect vehicle's motion from the OSTest deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="remote-rest">
                    <predicate key="query">select * from OSTest_MotionDetection</predicate>
                    <predicate key="remote-contact-point">http://whymper.ethz.ch:23080/streaming/</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
