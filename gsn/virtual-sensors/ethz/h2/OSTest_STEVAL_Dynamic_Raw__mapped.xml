<virtual-sensor name="OSTest_STEVAL_Dynamic_Raw__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
				<init-params>
            <param name="persistant">true</param>
	    	<param name="scriptlet">
				<![CDATA[
					try {
						DURATION = DURATION.toDouble();
						TIME_OF_DATA = (TIME_OF_DATA.toDouble()*1000) as long;
					}catch(Throwable e){
						org.apache.log4j.Logger.getLogger(gsn.vsensor.BridgeVirtualSensorPermasense.class).error(e);
					}
				]]>
	    	</param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
						<field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="DURATION" type="DOUBLE" unit="s" />
            <field name="TIME_OF_DATA" type="BIGINT" unit="unixtime" />
            <field name="X_DATA" type="VARCHAR(8192)" />
            <field name="Y_DATA" type="VARCHAR(8192)" />
            <field name="Z_DATA" type="VARCHAR(8192)" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>STEVAL sensor reading from the OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OSTest_STEVAL_Dynamic_Raw__muxed__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
