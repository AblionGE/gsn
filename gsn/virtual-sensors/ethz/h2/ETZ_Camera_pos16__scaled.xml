<virtual-sensor name="ETZ_Camera_pos16__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.JpegGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
        </init-params>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="RELATIVE_FILE" type="VARCHAR(255)" />
            <field name="DATA" type="binary" data-path-field="RELATIVE_FILE" />
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>webcam pictures from position 16 at ETZ deployment as thumbnails</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage storage-directory="/home/perma/permasense_vault/gsn-test-binaries/" history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE, FILE_COMPLETE from ETZ_Binary__mapped where RELATIVE_FILE like 'webcam1/%'</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE from wrapper where FILE_COMPLETE = 1 and POSITION = 16</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
