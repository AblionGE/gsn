            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>show statistics of the ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
		<stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog-stats">
                    <predicate key="sampling-rate">30</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
