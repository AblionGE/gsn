			<field name="in_ack_msg_counter" type="BIGINT" />
			<field name="in_ack_msg" type="BIGINT" unit="bytes" />
			<field name="in_ping_msg_counter" type="BIGINT" />
			<field name="in_ping_msg" type="BIGINT" unit="bytes" />
			<field name="in_ping_ack_msg_counter" type="BIGINT" />
			<field name="in_ping_ack_msg" type="BIGINT" unit="bytes" />
			<field name="in_tos_msg_counter" type="BIGINT" />
			<field name="in_tos_msg" type="BIGINT" unit="bytes" />
			<field name="in_tos1x_msg_counter" type="BIGINT" />
			<field name="in_tos1x_msg" type="BIGINT" unit="bytes" />
			<field name="in_backlogstatus_msg_counter" type="BIGINT" />
			<field name="in_backlogstatus_msg" type="BIGINT" unit="bytes" />
			<field name="in_corestationstatus_msg_counter" type="BIGINT" />
			<field name="in_corestationstatus_msg" type="BIGINT" unit="bytes" />
			<field name="in_binary_msg_counter" type="BIGINT" />
			<field name="in_binary_msg" type="BIGINT" unit="bytes" />
			<field name="in_vaisala_wxt520_msg_counter" type="BIGINT" />
			<field name="in_vaisala_wxt520_msg" type="BIGINT" unit="bytes" />
			<field name="in_schedule_msg_counter" type="BIGINT" />
			<field name="in_schedule_msg" type="BIGINT" unit="bytes" />
			<field name="in_gps_msg_counter" type="BIGINT" />
			<field name="in_gps_msg" type="BIGINT" unit="bytes" />
			<field name="in_OZ47_msg_counter" type="BIGINT" />
			<field name="in_OZ47_msg" type="BIGINT" unit="bytes" />
			<field name="in_ECVQEK3_msg_counter" type="BIGINT" />
			<field name="in_ECVQEK3_msg" type="BIGINT" unit="bytes" />
			
			<field name="out_ack_msg_counter" type="BIGINT" />
			<field name="out_ack_msg" type="BIGINT" unit="bytes" />
			<field name="out_ping_msg_counter" type="BIGINT" />
			<field name="out_ping_msg" type="BIGINT" unit="bytes" />
			<field name="out_ping_ack_msg_counter" type="BIGINT" />
			<field name="out_ping_ack_msg" type="BIGINT" unit="bytes" />
			<field name="out_queue_limit_msg_counter" type="BIGINT" />
