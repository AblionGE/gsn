<virtual-sensor name="OpenSense_GPS_NAV" priority="10" statistics="true" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="UTC_POS_TIME" type="INTEGER"/>
            <field name="LATITUDE" type="DOUBLE" />
            <field name="LAT_HEMISPHERE" type="VARCHAR(1)" />
            <field name="LONGITUDE" type="DOUBLE" />
            <field name="LONG_HEMISPHERE" type="VARCHAR(1)" />
            <field name="QUALITY" type="INTEGER" />
            <field name="NR_SATELLITES" type="INTEGER" />
            <field name="HDOP" type="DOUBLE" />
            <field name="GEOID_HEIGHT" type="DOUBLE" />
            <field name="GEOID_HEIGHT_UNIT" type="VARCHAR(1)" />
            <field name="GEOID_SEP" type="DOUBLE" />
            <field name="GEOID_SEP_UNIT" type="VARCHAR(1)" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>show Navigation GPS information from the OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <!--predicate key="remote-connection">opensense-etz-bs01.ethz.ch:9003</predicate-->
                    <predicate key="remote-connection">opensense-caa-etz-1.dyndns.biz:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.GPSPlugin</predicate>
                    <predicate key="gps-data-type">nav</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
	<stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">opensense-etz-bs02.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.GPSPlugin</predicate>
                    <predicate key="gps-data-type">nav</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
