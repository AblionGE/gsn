<virtual-sensor name="OpenSense_OZ47_Instant_Calibrated" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.OZ47InstantCalibration</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            
            <field name="OZONE_PPB" type="DOUBLE" unit="ppb"/>
            <field name="CALIB_PARAM_0" type="DOUBLE" />
            <field name="CALIB_PARAM_1" type="DOUBLE" />
            
            <field name="TEMPERATURE" type="DOUBLE" unit="C"/>
            <field name="HUMIDITY" type="INTEGER" unit="%"/>
            
            <field name="UTC_POS_TIME" type="INTEGER"/>
            <field name="LATITUDE" type="DOUBLE" unit="N"/>
            <field name="LONGITUDE" type="DOUBLE" unit="E"/>
            <field name="QUALITY" type="INTEGER" />
            <field name="NR_SATELLITES" type="INTEGER" />
            <field name="HDOP" type="DOUBLE" />
            <field name="GEOID_HEIGHT" type="DOUBLE" unit="m"/>
            
            <field name="MEASUREMENT_ID" type="BIGINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Instant calibration of ozone sensor from the OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OpenSense_OZ47_Uncalibrated</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
