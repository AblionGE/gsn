<virtual-sensor name="Dirruhorn_Camera_pos11_Position2__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.JpegGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="file_type">jpeg</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>camera pictures from position 11 at Dirruhorn deployment showing Position2 as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Dirruhorn deployment</predicate>
        <predicate key="LATITUDE">46.121808</predicate>
        <predicate key="LONGITUDE">7.821777</predicate>
    </addressing>
    <storage user="user" password="" driver="org.h2.Driver" url="jdbc:h2:mem:gsn_mem_db;DB_CLOSE_DELAY=-1" storage-directory="/home/perma/permasense_vault/gsn-binaries/" history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE, FILE_COMPLETE from Dirruhorn_Binary__mapped where RELATIVE_FILE like 'webcam1/%Position2%'</predicate>
                </address>
                <query> select timed, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE from wrapper where FILE_COMPLETE = 1 and POSITION = 11</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
