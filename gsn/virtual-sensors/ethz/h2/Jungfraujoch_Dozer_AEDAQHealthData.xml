<virtual-sensor name="Jungfraujoch_Dozer_AEDAQHealthData" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_VCCCH1" type="INTEGER" />            
            <field name="PAYLOAD_VCCCH2" type="INTEGER" />
            <field name="PAYLOAD_VCCADC" type="INTEGER" />
            <field name="PAYLOAD_REFADC" type="INTEGER" />
            <field name="PAYLOAD_VCCOPA" type="INTEGER" />
            <field name="PAYLOAD_VCC55V" type="INTEGER" />
            <field name="PAYLOAD_I12V" type="INTEGER" />
            <field name="PAYLOAD_I55VANALOG" type="INTEGER" />
            <field name="PAYLOAD_I55VDIGITAL" type="INTEGER" />
            <field name="PAYLOAD_SDEVENTSFREE" type="BIGINT" />
            <field name="PAYLOAD_DAQPOWERSTATE" type="SMALLINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerAEDAQHealthDataMsg) from Jungfraujoch deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-jj-bs01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos2x.messages.DozerAEDAQHealthDataMsg</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>

        <stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-caa-jj-2.dyndns.biz:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos2x.messages.DozerAEDAQHealthDataMsg</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
