<virtual-sensor name="Dirruhorn_Dozer_Drift__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="LOCALTEMP" type="INTEGER" />
            <field name="PARENTTEMP" type="INTEGER" />
            <field name="DRIFTPPM" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerDriftMsg) from Dirruhorn deployment in usable form</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">
                        select * from Dirruhorn_Dozer_Drift__muxed__mapped 
                    </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, TIMESTAMP, GENERATION_TIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME,
                    PAYLOAD_MYTEMP0 as LOCALTEMP,
                    PAYLOAD_PARENTTEMP0 as PARENTTEMP,
                    PAYLOAD_DRIFTPPM0 as DRIFTPPM from wrapper 
                </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">
                        select * from Dirruhorn_Dozer_Drift__muxed__mapped
                    </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, TIMESTAMP, GENERATION_TIME+1 as GENERATION_TIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, 
                    PAYLOAD_MYTEMP1 as LOCALTEMP,
                    PAYLOAD_PARENTTEMP1 as PARENTTEMP,
                    PAYLOAD_DRIFTPPM1 as DRIFTPPM from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">
                        select * from Dirruhorn_Dozer_Drift__muxed__mapped
                    </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, TIMESTAMP, GENERATION_TIME+2 as GENERATION_TIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, 
                    PAYLOAD_MYTEMP2 as LOCALTEMP,
                    PAYLOAD_PARENTTEMP2 as PARENTTEMP,
                    PAYLOAD_DRIFTPPM2 as DRIFTPPM from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
