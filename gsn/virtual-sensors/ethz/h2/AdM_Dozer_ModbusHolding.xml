<virtual-sensor name="AdM_Dozer_ModbusHolding" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="PAYLOAD_SLAVE_ADDRESS" type="SMALLINT" />
            <field name="PAYLOAD_STARTING_ADDRESS" type="INTEGER" />
            <field name="PAYLOAD_VALID_REGISTERS" type="SMALLINT" />
            <field name="PAYLOAD_HOLDING_REGISTER1" type="INTEGER" />
            <field name="PAYLOAD_HOLDING_REGISTER2" type="INTEGER" />
            <field name="PAYLOAD_HOLDING_REGISTER3" type="INTEGER" />
            <field name="PAYLOAD_HOLDING_REGISTER4" type="INTEGER" />
            <field name="PAYLOAD_HOLDING_REGISTER5" type="INTEGER" />
            <field name="PAYLOAD_HOLDING_REGISTER6" type="INTEGER" />
            <field name="PAYLOAD_HOLDING_REGISTER7" type="INTEGER" />
            <field name="PAYLOAD_HOLDING_REGISTER8" type="INTEGER" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerModbusHoldingMsg) from AdM deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-adm-bs01.ethz.ch:9004</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos2x.messages.DozerModbusHoldingMsg</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
