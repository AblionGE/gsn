<virtual-sensor name="ETZ_Webcam_pos2__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.FileGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="storage_directory">/home/perma/gsn-test-binaries/</param>
            <param name="file_type">jpeg</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>webcam pictures from position 2 at ETZ deployment as thumbnails</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, GENERATION_TIME, RELATIVE_FILE, FILE_COMPLETE from ETZ_Binary__mapped where RELATIVE_FILE like 'webcam1/%'</predicate>
                </address>
                <query> select timed, POSITION, GENERATION_TIME, RELATIVE_FILE from wrapper where FILE_COMPLETE = 1 and POSITION = 2</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
