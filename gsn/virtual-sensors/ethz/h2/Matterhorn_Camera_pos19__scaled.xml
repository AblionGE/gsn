<virtual-sensor name="Matterhorn_Camera_pos19__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.JpegGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="nef_extraction_type">thumbnail</param>
            <param name="rotation">270</param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="RELATIVE_FILE" type="VARCHAR(255)" />
            <field name="DATA" type="binary" data-path-field="RELATIVE_FILE" />
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>camera pictures from position 19 at Matterhorn deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Matterhorn deployment</predicate>
        <predicate key="LATITUDE">45.98103726200003</predicate>
        <predicate key="LONGITUDE">7.671217388000011</predicate>
        <predicate key="ALTITUDE">28.06000000086887</predicate>
        <predicate key="HEADING">-122.28</predicate>
        <predicate key="TILT">104.5097921306319</predicate>
        <predicate key="ROLL">-1.670011136226304</predicate>
        <predicate key="HORFOV">13.91</predicate>
        <predicate key="VERFOV">20.455</predicate>
        <predicate key="NEAR">9.821</predicate>
    </addressing>
    <storage storage-directory="/home/perma/permasense_vault/gsn-binaries/" history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE, FILE_COMPLETE from Matterhorn_Binary__mapped where RELATIVE_FILE like 'camera1/%'</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, GENERATION_TIME, RELATIVE_FILE from wrapper where FILE_COMPLETE = 1 and POSITION = 19</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
