<virtual-sensor name="Matterhorn_pos19_BackLogStatus__chart3" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Sqlite3 packet remove time (7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">ms</param>
            <param name="history-size">10080</param>
            <param name="time-stream-name">GENERATION_TIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>backlog health status from position 19 at Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Matterhorn test deployment</predicate>
        <predicate key="LATITUDE">45.980126</predicate>
        <predicate key="LONGITUDE">7.670109</predicate>
    </addressing>
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select timed, POSITION, GENERATION_TIME, DB_REMOVE_TIME_MIN, DB_REMOVE_TIME_MEAN, DB_REMOVE_TIME_MAX from Matterhorn_BackLogStatus__mapped__1950</predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select GENERATION_TIME, 
                DB_REMOVE_TIME_MIN as min, 
                DB_REMOVE_TIME_MEAN as mean, 
                DB_REMOVE_TIME_MAX as max 
                from wrapper where POSITION = 19 and GENERATION_TIME >= (DATEDIFF(second, '1970-01-01', NOW()) * 1000) - 604800000</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
