<virtual-sensor name="OpenSense_GasMobile_Ozone_Only_Init_Calibrated" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
    		<init-params>
            <param name="persistant">true</param>
	    	<param name="scriptlet">
	    	<![CDATA[
	    		
					try {
					
					 def a_0;
					 def a_1;
					 def kT;
					 
					 if (DEVICE_ID == 300) {
  					 a_0 = 3.635901;
             a_1 = 0.026868;
             kT = 0.025;
					 }
					 else {
					   // For not supported devices
					   a_0 = 0;
             a_1 = 0;
					 }
					
					 def res = RESISTANCE_1 * Math.exp(kT * (TEMPERATURE-25));
					 OZONE_PPB = a_0 + a_1*res;
					 
					}catch(Throwable e){
						org.apache.log4j.Logger.getLogger(gsn.processor.ScriptletProcessor.class).error(e);
					}
				]]>
	    	</param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            
            <field name="OZONE_PPB" type="DOUBLE" unit="ppb"/>
            <field name="TEMPERATURE" type="DOUBLE" unit="C"/>
            <field name="HUMIDITY" type="INTEGER" unit="%"/>
            
            <field name="LATITUDE" type="DOUBLE" unit="N"/>
            <field name="LONGITUDE" type="DOUBLE" unit="E"/>
            <field name="SPEED" type="DOUBLE" unit="m/s"/>
            
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Only initial calibration of ozone sensor from the GasMobile OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OpenSense_GasMobile_Ozone_Uncalibrated</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
