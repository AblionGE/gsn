<virtual-sensor name="Jungfraujoch_Dozer_SeqNumber__nodeidx__chart1" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Dozer sequence number (7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">#</param>
            <param name="history-size">5020</param>
            <param name="time-stream-name">GENERATION_TIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>Dozer sequence number information from Jungfraujoch deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select timed, HEADER_ORIGINATORID, GENERATION_TIME, HEADER_SEQNR from Jungfraujoch_dozer_adcmux2__mapped </predicate>
                </address>
                <query> select timed, GENERATION_TIME, HEADER_SEQNR as SEQNR from wrapper where HEADER_ORIGINATORID = 2010 </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
