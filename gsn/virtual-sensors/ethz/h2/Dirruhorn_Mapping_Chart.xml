<virtual-sensor name="Dirruhorn_Mapping_Chart" priority="10" statistics="false" >
    <processing-class>
        <class-name>gsn.vsensor.MappingVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DATA" type="BINARY"/>
        </output-structure>
    </processing-class>
    <description>Device Mapping of Dirruhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
      <stream name="position_mapping">
        <source alias="source" storage-size="1" sampling-rate="1">
          <address wrapper="local">
            <predicate key="query">select * from dirruhorn_mapping_position</predicate>
            <predicate key="start-time">continue</predicate>
          </address>
          <query>select * from wrapper</query>
        </source>
        <query> select * from source </query>
      </stream>
      <stream name="sensor_mapping">
        <source alias="source" storage-size="1" sampling-rate="1">
          <address wrapper="local">
            <predicate key="query">select * from dirruhorn_mapping_sensor</predicate>
            <predicate key="start-time">continue</predicate>
          </address>
          <query>select * from wrapper</query>
        </source>
        <query> select * from source </query>
      </stream>
      <stream name="geo_mapping">
        <source alias="source" storage-size="1" sampling-rate="1">
          <address wrapper="local">
            <predicate key="query">select * from dirruhorn_mapping_geo</predicate>
            <predicate key="start-time">continue</predicate>
          </address>
          <query>select * from wrapper</query>
        </source>
        <query> select * from source </query>
      </stream>
    </streams>
</virtual-sensor>
