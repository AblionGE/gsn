<virtual-sensor name="OSTest_OZ47_Dynamic_GPS__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="OZONE_SENSOR_1" type="INTEGER" unit="ppb"/>
            <field name="OZONE_SENSOR_2" type="INTEGER" unit="ppb"/>
            <field name="RESISTANCE_1" type="INTEGER" unit="kOhm"/>
            <field name="RESISTANCE_2" type="INTEGER" unit="kOhm"/>
            <field name="TEMPERATURE" type="DOUBLE" unit="C"/>
            <field name="HUMIDITY" type="INTEGER" unit="%"/>
            <field name="SENSOR_ID" type="INTEGER"/>
            <field name="GPS_UTC_POS_TIME" type="INTEGER"/>
            <field name="GPS_LATITUDE" type="DOUBLE" />
            <field name="GPS_LONGITUDE" type="DOUBLE" />
            <field name="GPS_QUALITY" type="INTEGER" />
            <field name="GPS_NR_SATELLITES" type="INTEGER" />
            <field name="GPS_GEOID_HEIGHT" type="DOUBLE" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>OZ-47 sensor reading combined with GPS data from the OSTest deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="ozone">
            <source alias="ozone" storage-size="1m" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OSTest_OZ47_Dynamic__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        
        <stream name="gps">
            <source alias="gps" storage-size="1m" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OSTest_GPS_NAV__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select POSITION, GENERATION_TIME, UTC_POS_TIME, LATITUDE, LONGITUDE, QUALITY, NR_SATELLITES, GEOID_HEIGHT from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        
        <query> select ozone.POSITION, ozone.DEVICE_ID, ozone.GENERATION_TIME, ozone.TIMESTAMP, ozone.OZONE_SENSOR_1, ozone.OZONE_SENSOR_2,
                       ozone.RESISTANCE_1, ozone.RESISTANCE_2, ozone.TEMPERATURE, ozone.HUMIDITY, ozone.SENSOR_ID, ozone.DATA_IMPORT_SOURCE,
                       gps.UTC_POS_TIME as GPS_UTC_POS_TIME, gps.LATITUDE as GPS_LATITUDE, gps.LONGITUDE as GPS_LONGITUDE, gps.QUALITY as GPS_QUALITY,
                       gps.NR_SATELLITES as GPS_NR_SATELLITES, gps.GEOID_HEIGHT as GPS_GEOID_HEIGHT
                from   ozone 
                inner join gps on ozone.POSITION = gps.POSITION and ozone.GENERATION_TIME<=gps.GENERATION_TIME+4000 and ozone.GENERATION_TIME>=gps.GENERATION_TIME-4000
        </query>
        
    </streams>
</virtual-sensor>
