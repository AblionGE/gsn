<virtual-sensor name="Matterhorn_pos0_CoreStationStatus__chart2" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Corestation internal voltage health (Position 0)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">V</param>
            <param name="history-size">2880</param>
            <param name="time-stream-name">GENERATION_TIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>Corestation health status from position 0 at Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Matterhorn deployment</predicate>
        <predicate key="LATITUDE">45.980126</predicate>
        <predicate key="LONGITUDE">7.670109</predicate>
    </addressing>
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select timed, POSITION, GENERATION_TIME, VCC_5_0, VCC_NODE, VCC_4_2 from Matterhorn_CoreStationStatus__conv</predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select GENERATION_TIME, VCC_5_0, VCC_NODE, VCC_4_2 from wrapper where POSITION = 0 and GENERATION_TIME >= (DATEDIFF(second, '1970-01-01', NOW()) * 1000) - 604800000 </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
