<virtual-sensor name="Statistics_DataFlow" priority="10" protected="true" statistics="false" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="VS_NAME" type="VARCHAR(255)" />
            <field name="EVENT_TYPE" type="TINYINT" />
            <field name="SOURCE" type="VARCHAR(255)" />
            <field name="STREAM" type="VARCHAR(255)" />
            <field name="VOLUME" type="BIGINT" unit="bytes" />
        </output-structure>
    </processing-class>
    <description>show data flow statistics</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
		<stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="dataflow-stats">
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
