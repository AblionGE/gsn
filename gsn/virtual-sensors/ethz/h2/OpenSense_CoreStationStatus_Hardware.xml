<virtual-sensor name="OpenSense_CoreStationStatus_Hardware" priority="10" statistics="true" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            
            <field name="V_EXT1" type="INTEGER" unit="mV"/>
            <field name="V_EXT2" type="INTEGER" unit="mV"/>
            <field name="V_EXT3" type="INTEGER" unit="mV"/>
            <field name="I_V12DC_EXT" type="INTEGER" unit="µA"/>
            <field name="V12DC_IN" type="INTEGER" unit="mV"/>
            <field name="I_V12DC_IN" type="INTEGER" unit="µA"/>
            <field name="VCC_5_0" type="INTEGER" unit="mV"/>
            <field name="VCC_NODE" type="INTEGER" unit="mV"/>
            <field name="I_VCC_NODE" type="INTEGER" unit="µA"/>
            <field name="VCC_4_2" type="INTEGER" unit="mV"/>
            <field name="LM92_TEMP" type="INTEGER" unit="m°C" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>show hardware status information of the CoreStations from the OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <!--predicate key="remote-connection">opensense-etz-bs01.ethz.ch:9003</predicate-->
                    <predicate key="remote-connection">opensense-caa-etz-1.dyndns.biz:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.CoreStationStatusPlugin</predicate>
                    <predicate key="status-data-type">hardware</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">opensense-etz-bs02.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.CoreStationStatusPlugin</predicate>
                    <predicate key="status-data-type">hardware</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        </streams>
</virtual-sensor>
