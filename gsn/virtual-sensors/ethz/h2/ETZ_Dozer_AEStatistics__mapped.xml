<virtual-sensor name="ETZ_Dozer_AEStatistics__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
		<init-params>
            <param name="position_mapping" />
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_MEASURED" type="INTEGER" />            
            <field name="PAYLOAD_PARAMETRIZED" type="INTEGER" />
            <field name="PAYLOAD_STORED" type="INTEGER" />
            <field name="PAYLOAD_BUFFERUNDERFLOWS" type="INTEGER" />
            <field name="PAYLOAD_NOISEFLOOR_CH1" unit="dB" type="SMALLINT" />
            <field name="PAYLOAD_NOISEFLOOR_CH2" unit="dB" type="SMALLINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerAEStatisticsMsg) from ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
    	<stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="remote-rest">
                    <predicate key="query"> select * from ETZ_Dozer_AEStatistics</predicate>
                    <predicate key="remote-contact-point">http://whymper.ethz.ch:23001/streaming/</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>    
    </streams>
</virtual-sensor>
