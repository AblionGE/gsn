<virtual-sensor name="Jungfraujoch_pos0_Camera__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.FileGetterVirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
            <param name="file_type">nef</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>camera pictures from position 0 at Jungfraujoch deployment as thumbnail</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Jungfraujoch deployment</predicate>
        <predicate key="LATITUDE">46.547451</predicate>
        <predicate key="LONGITUDE">7.982092</predicate>
    </addressing>
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, GENERATION_TIME, RELATIVE_FILE, STORAGE_DIRECTORY from Jungfraujoch_Binary__mapped__1950 where RELATIVE_FILE like 'camera1/%'</predicate>
                </address>
                <query> select timed, GENERATION_TIME, concat(STORAGE_DIRECTORY,RELATIVE_FILE) as FILE from wrapper where POSITION = 0</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
