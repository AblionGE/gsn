<virtual-sensor name="Thur_Sampler6712_Sampling" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <web-input password="test">
            <command name="reinit_sampler">
                <field name="core_station" type="*text" defaultvalue="7000">the device_id of the receiving core station</field>
            </command>
            <command name="take_sample">
                <field name="core_station" type="*text" defaultvalue="7000">the device_id of the receiving core station</field>
                <field name="bottle_number" type="*text" defaultvalue="1">bottle to place sample in</field>
                <field name="volume" type="*text" defaultvalue="10">volume to sample [ml]</field>
            </command>
        </web-input>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />

            <field name="SAMPLING_TRIGGER_SOURCE" type="INTEGER"/>
            <field name="BOTTLE_NUMBER" type="INTEGER"/>
            <field name="VOLUME" type="INTEGER" unit="ml" />
            <field name="SAMPLING_RESULT" type="INTEGER" />
            <field name="SAMPLER_MODEL" type="INTEGER" />
            <field name="SAMPLER_ID" type="INTEGER" />
            <field name="SAMPLER_TIME" type="DOUBLE" />
            <field name="SAMPLER_STATUS" type="INTEGER" />
            <field name="MOST_RECENT_SAMPLE_TIME" type="DOUBLE" />
            <field name="MOST_RECENT_SAMPLE_BOTTLE" type="INTEGER" />
            <field name="MOST_RECENT_SAMPLE_VOLUME" type="INTEGER" />
            <field name="MOST_RECENT_SAMPLE_RESULT" type="INTEGER" />
            <field name="CHECKSUM" type="INTEGER" />
        </output-structure>
    </processing-class>
    <description>This plugin allows to send commands to the 6712 water sampler at the Thur deployment</description>
    <life-cycle pool-size="10" />
    <addressing/>
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-thur-hyd01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.Sampler6712Plugin</predicate>
                    <predicate key="status-data-type">sampling_result</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
