<virtual-sensor name="ETZ_pos3_Webcam__scaled" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="jpeg_scaled">JPEG_SCALED</param>
        </init-params>
        <output-structure>
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="JPEG_SCALED" type="binary:image/jpeg" />
        </output-structure>
    </processing-class>
    <description>webcam pictures from position 3 at ETZ deployment as thumbnails</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense ETZ test deployment</predicate>
        <predicate key="LATITUDE">47.377326</predicate>
        <predicate key="LONGITUDE">8.552935</predicate>
    </addressing>
    <storage history-size="1"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select timed, POSITION, GENERATION_TIME, DATA from ETZ_Binary__mapped where RELATIVE_FILE like 'webcam1/%'</predicate>
                </address>
                <query> select timed, GENERATION_TIME, DATA as JPEG_SCALED from wrapper where POSITION = 3</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
