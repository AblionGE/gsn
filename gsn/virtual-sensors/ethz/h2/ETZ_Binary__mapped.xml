<virtual-sensor name="ETZ_Binary__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="position_mapping" />
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>

            <field name="FILE_SIZE" type="BIGINT" unit="bytes" />
            <field name="TRANSMITTED" type="BIGINT" unit="bytes" />
            <field name="TRANSMISSION_TIME_EFF" type="INTEGER" unit="ms" />
            <field name="TRANSMISSION_TIME_TOT" type="INTEGER" unit="ms" />
            <field name="CHUNK_RETRANSMISSIONS" type="INTEGER" />
            <field name="FILE_QUEUE_SIZE" type="INTEGER" />
			
            <field name="RELATIVE_FILE" type="VARCHAR(255)" />
            <field name="FILE_COMPLETE" type="SMALLINT" />
            <field name="DATA" type="binary" data-path-field="RELATIVE_FILE" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>binaries from the ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense ETZ test deployment</predicate>
        <predicate key="LATITUDE">47.377326</predicate>
        <predicate key="LONGITUDE">8.552935</predicate>
    </addressing>
    <storage storage-directory="/home/perma/gsn-test-binaries/" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="remote-rest">
                    <predicate key="query"> select * from ETZ_Binary</predicate>
                    <predicate key="remote-contact-point">http://tik31x.ee.ethz.ch:22001/streaming/</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
