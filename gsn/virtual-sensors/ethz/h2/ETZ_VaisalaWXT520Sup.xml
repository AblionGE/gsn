<virtual-sensor name="Etz_VaisalaWXT520Sup" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="HEATING_TEMPERATURE" type="VARCHAR(30)" unit="Â°C"/>
            <field name="HEATING_VOLTAGE" type="VARCHAR(30)" unit="V"/>
            <field name="SUPPLY_VOLTAGE" type="VARCHAR(30)" unit="V"/>
            <field name="REF_VOLTAGE" type="VARCHAR(30)" unit="V"/>  
        </output-structure>
    </processing-class>
    <description>show weather sensor values of Vaisala WXT520 at the Etz deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Etz_Dozer_WXT520Sup__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP,
                casewhen(PAYLOAD_SAMPLE_VALID=1,cast(round(PAYLOAD_SU_TH / 10.0, 2) as CHAR(30)),NULL) as HEATING_TEMPERATURE,
                casewhen(PAYLOAD_SAMPLE_VALID=1,cast(round(PAYLOAD_SU_VH / 1000.0, 2) as CHAR(30)),NULL) as HEATING_VOLTAGE,
                casewhen(PAYLOAD_SAMPLE_VALID=1,cast(round(PAYLOAD_SU_VS / 1000.0, 2) as CHAR(30)),NULL) as SUPPLY_VOLTAGE,
                casewhen(PAYLOAD_SAMPLE_VALID=1,cast(round(PAYLOAD_SU_VR / 1000.0, 2) as CHAR(30)),NULL) as REF_VOLTAGE
                from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from Etz_VaisalaWXT520__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select
                  timed, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP,
                  HEATING_TEMPERATURE,HEATING_VOLTAGE,SUPPLY_VOLTAGE,REF_VOLTAGE
                  from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
