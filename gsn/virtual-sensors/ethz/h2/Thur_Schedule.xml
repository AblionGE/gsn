<virtual-sensor name="Thur_Schedule" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
       	<web-input password="test">
            <command name="schedule_command">
                <field name="core_station" type="*text" defaultvalue="65535">the device_id of the receiving core station</field>
                <field name="schedule" type="*binary:1mb">schedule</field>
            </command>
   	</web-input>
       	<output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TRANSMISSION_TIME" type="BIGINT" unit="unixtime" />
            <field name="SCHEDULE" type="binary" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
       	</output-structure>
    </processing-class>
    <description>schedules for Thur deployment</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="type">PermaSense Thur deployment</predicate>
        <predicate key="LATITUDE">47.589889</predicate>
        <predicate key="LONGITUDE">8.773874</predicate>
    </addressing>
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-thur-bs01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.SchedulePlugin</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
