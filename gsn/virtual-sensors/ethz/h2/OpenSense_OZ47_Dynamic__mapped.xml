<virtual-sensor name="OpenSense_OZ47_Dynamic__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.OZ47VirtualSensor</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="message_type">dynamic</param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="OZONE_SENSOR_1" type="INTEGER" unit="ppb"/>
            <field name="OZONE_SENSOR_2" type="INTEGER" unit="ppb"/>
            <field name="RESISTANCE_1" type="INTEGER" unit="kOhm"/>
            <field name="RESISTANCE_2" type="INTEGER" unit="kOhm"/>
            <field name="TEMPERATURE" type="DOUBLE" unit="C"/>
            <field name="HUMIDITY" type="INTEGER" unit="%"/>
            <field name="SENSOR_ID" type="INTEGER"/>
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>OZ-47 sensor reading from the OpenSense deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OpenSense_OZ47__muxed__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
