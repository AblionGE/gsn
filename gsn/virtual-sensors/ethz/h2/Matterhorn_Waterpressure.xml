<virtual-sensor name="Matterhorn_Waterpressure" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="SENSORTYPE" type="VARCHAR(100)" />
            <field name="SENSORTYPE_SERIALID" type="BIGINT" />
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s" />
            <field name="PAYLOAD_SAMPLE_VALID" type="SMALLINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="DCX_BATTERY" type="SMALLINT" />
            <field name="DCX_P1" type="VARCHAR(30)" />
            <field name="DCX_P2" type="VARCHAR(30)" />
            <field name="DCX_P12" type="VARCHAR(30)" />
            <field name="DCX_TOB1" type="VARCHAR(30)" />
            <field name="DCX_TOB2" type="VARCHAR(30)" />
        </output-structure>
    </processing-class>
    <description>Waterpressure/PS data from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Matterhorn_Dozer_DigitalDCX__mapped </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select *, 
                    PAYLOAD_DCX_BATTERYSTATUS as DCX_BATTERY, 
                    cast(round((PAYLOAD_DCX_FLOATVALUE1 + PAYLOAD_DCX_FLOATVALUE0) * 1000, 2) as CHAR(30)) as DCX_P1, 
                    cast(round(PAYLOAD_DCX_FLOATVALUE1 * 1000, 2) as CHAR(30)) as DCX_P2, 
                    cast(round(PAYLOAD_DCX_FLOATVALUE0 * 1000, 2) as CHAR(30)) as DCX_P12, 
                    cast(round(PAYLOAD_DCX_FLOATVALUE2, 3) as CHAR(30)) as DCX_TOB1, 
                    cast(round(PAYLOAD_DCX_FLOATVALUE3, 3) as CHAR(30)) as DCX_TOB2 from wrapper where PAYLOAD_SAMPLE_VALID != 0 </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
