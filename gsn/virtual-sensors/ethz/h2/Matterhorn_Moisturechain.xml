<virtual-sensor name="Matterhorn_Moisturechain" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="SENSORTYPE" type="VARCHAR(100)" />
            <field name="SENSORTYPE_SERIALID" type="BIGINT" />
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s" />
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="TM_REF1" type="VARCHAR(30)" />
            <field name="TM_REF2" type="VARCHAR(30)" />
            <field name="TM_T1" type="VARCHAR(30)" />
            <field name="TM_T2" type="VARCHAR(30)" />
            <field name="TM_T3" type="VARCHAR(30)" />
            <field name="TM_T4" type="VARCHAR(30)" />
            <field name="TM_REF3" type="VARCHAR(30)" />
            <field name="TM_REF4" type="VARCHAR(30)" />
            <field name="TM_REF5" type="VARCHAR(30)" />
            <field name="TM_M1" type="VARCHAR(30)" />
            <field name="TM_M2" type="VARCHAR(30)" />
            <field name="TM_M3" type="VARCHAR(30)" />
            <field name="TM_M4" type="VARCHAR(30)" />
            <field name="TM_REF6" type="VARCHAR(30)" />
        </output-structure>
    </processing-class>
    <description>Moisturechain/TM data (merged) from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Matterhorn_Moisturechain1 </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Matterhorn_Moisturechain2 </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
