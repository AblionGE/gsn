<virtual-sensor name="Thur_Sampler6712_Status" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <web-input password="test">
            <command name="report_status">
                <field name="core_station" type="*text" defaultvalue="7000">the device_id of the receiving core station</field>
            </command>
        </web-input>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />

            <field name="NB_OF_BOTTLES" type="INTEGER"/>
            <field name="BOTTLE_VOLUME_IN_LIT" type="DOUBLE"/>
            <field name="SUCTION_LINE_LENGTH_IN_M" type="DOUBLE"/>
            <field name="SUCTION_LINE_HEAD" type="DOUBLE"/>
            <field name="NB_OF_RINSE_CYCLES" type="INTEGER"/>
            <field name="NB_OF_RETRIES" type="INTEGER"/>

            <field name="MC_SAMPLER_STATUS" type="INTEGER"/>
            <field name="MC_SAMPLER_STATUS_EXTENSION" type="INTEGER"/>
            <field name="MC_PROGRAM_STATUS" type="INTEGER"/>

            <field name="EPC_SAMPLER_MODEL" type="INTEGER" />
            <field name="EPC_SAMPLER_ID" type="INTEGER" />
            <field name="EPC_SAMPLER_TIME" type="DOUBLE" />
            <field name="EPC_SAMPLER_STATUS" type="INTEGER" />
            <field name="EPC_MOST_RECENT_SAMPLE_TIME" type="DOUBLE" />
            <field name="EPC_MOST_RECENT_SAMPLE_BOTTLE" type="INTEGER" />
            <field name="EPC_MOST_RECENT_SAMPLE_VOLUME" type="INTEGER" />
            <field name="EPC_MOST_RECENT_SAMPLE_RESULT" type="INTEGER" />
            <field name="EPC_CHECKSUM" type="INTEGER" />
        </output-structure>
    </processing-class>
    <description>This plugin allows to request the 6712 water sampler status at the Thur deployment</description>
    <life-cycle pool-size="10" />
    <addressing/>
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-thur-hyd01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.Sampler6712Plugin</predicate>
                    <predicate key="status-data-type">sampler_status</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
