<virtual-sensor name="OSTest_STEVAL_Dynamic_Proc_GPS" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.GPSStreamJoiner</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="join_type">acc</param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            
            <field name="DURATION" type="DOUBLE" unit="s"/>
            <field name="TIME_OF_DATA" type="BIGINT" unit="unixtime"/>
            <field name="UTC_POS_TIME" type="INTEGER"/>
            <field name="LATITUDE" type="DOUBLE" />
            <field name="LONGITUDE" type="DOUBLE" />
            <field name="QUALITY" type="INTEGER" />
            <field name="NR_SATELLITES" type="INTEGER" />
            <field name="HDOP" type="DOUBLE" />
            <field name="GEOID_HEIGHT" type="DOUBLE" />
            
            <field name="MEASUREMENT_ID" type="BIGINT" />
        </output-structure>
    </processing-class>
    <description>STEVAL sensor reading combined with GPS information from the OSTest deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="sensor">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OSTest_STEVAL_Dynamic_Proc__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper where MEASUREMENT_ID != -1</query>
            </source>
            <query> select * from source </query>
        </stream>
        
        <stream name="gps">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from OSTest_GPS_NAV__mapped</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper where MEASUREMENT_ID != -1</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
