<virtual-sensor name="ETZ_GPS_NAV" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="UTC_POS_TIME" type="INTEGER"/>
            <field name="LATITUDE" type="SMALLINT" />
            <field name="LAT_HEMISPHERE" type="DOUBLE" />
            <field name="LONGITUDE" type="DOUBLE" />
            <field name="LONG_HEMISPHERE" type="DOUBLE" />
            <field name="QUALITY" type="SMALLINT" />
            <field name="NR_SATELLITES" type="SMALLINT" />
            <field name="HDOP" type="SMALLINT" />
            <field name="GEOID_HEIGHT" type="SMALLINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
            <field name="HEIGHT_DIF" type="SMALLINT" />
            <field name="AGE_DGPS" type="SMALLINT" />
            <field name="CHECKSUM" type="SMALLINT" />
            <field name="DATA_IMPORT_SOURCE" type="SMALLINT" />
        </output-structure>
    </processing-class>
    <description>show Navigation GPS information from ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-etz-gps01.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.GPSPlugin</predicate>
                    <predicate key="gps-data-type">nav</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
	<stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="remote-connection">permasense-etz-gps02.ethz.ch:9003</predicate>
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.GPSPlugin</predicate>
                    <predicate key="gps-data-type">nav</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
