<virtual-sensor name="Jungfraujoch_Sensorrod" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="SENSORTYPE" type="VARCHAR(100)" />
            <field name="SENSORTYPE_SERIALID" type="BIGINT" />
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s" />
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="SR_REF1" type="VARCHAR(30)" unit="°C" />
            <field name="SR_REF2" type="VARCHAR(30)" unit="°C" />
            <field name="SR_T1" type="VARCHAR(30)" unit="°C" />
            <field name="SR_T2" type="VARCHAR(30)" unit="°C" />
            <field name="SR_T3" type="VARCHAR(30)" unit="°C" />
            <field name="SR_T4" type="VARCHAR(30)" unit="°C" />
            <field name="SR_REF3" type="VARCHAR(30)" unit="°C" />
            <field name="SR_REF4" type="VARCHAR(30)" unit="°C" />
            <field name="SR_REF5" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R1" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R2" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R3" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R4" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R12" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R23" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R34" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R31" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R42" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_R41" type="VARCHAR(30)" unit="MΩ" />
            <field name="SR_REF6" type="VARCHAR(30)" unit="MΩ" />
        </output-structure>
    </processing-class>
    <description>Sensorrod/SR data (merged) from Jungfraujoch deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Jungfraujoch_Sensorrod1 </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data2">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Jungfraujoch_Sensorrod2 </predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
