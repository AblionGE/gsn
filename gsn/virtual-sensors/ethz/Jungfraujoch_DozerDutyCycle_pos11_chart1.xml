<virtual-sensor name="Jungfraujoch_DozerDutyCycle_pos11_chart1" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Dozer duty cycle (Position 11, 7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">â€°</param>
            <param name="history-size">5040</param>
            <param name="time-stream-name">GENERATIONTIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>Dozer duty cycle information from Jungfraujoch deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select GENERATIONTIME, PAYLOAD_PERIOD, PAYLOAD_MCUACTIVE, PAYLOAD_RADIOTX, PAYLOAD_RADIORX from Jungfraujoch_DozerStateCounter_mapped_1396 where POSITION = 11 </predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select GENERATIONTIME, 
                    (PAYLOAD_MCUACTIVE * 1000 / PAYLOAD_PERIOD) as MCUACTIVE, 
                    (PAYLOAD_RADIOTX * 1000 / PAYLOAD_PERIOD) as RADIOTX, 
                    (PAYLOAD_RADIORX * 1000 / PAYLOAD_PERIOD) as RADIORX from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
