<virtual-sensor name="ETZG2_BigBinary_1515" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="MODIFICATIONTIME" type="BIGINT" />
            <field name="RELATIVEFILE" type="VARCHAR(255)" />
            <field name="STORAGEDIRECTORY" type="VARCHAR(255)" />
            <field name="DATA" type="binary" />
        </output-structure>
    </processing-class>
    <description>big binaries from the ETZG2 deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.BigBinaryPlugin</predicate>
                    <predicate key="storage-directory">/home/perma/gsn-test-binaries/etzg2/</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
