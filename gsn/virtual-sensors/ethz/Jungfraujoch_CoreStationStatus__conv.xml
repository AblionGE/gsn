            <field name="POSITION" type="INTEGER" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" />
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime" />
            <field name="V_PV" type="VARCHAR(30)" unit="V"/>
            <field name="I_PV" type="VARCHAR(30)" unit="mA"/>
            <field name="V_12BAT" type="VARCHAR(30)" unit="V"/>
            <field name="I_V12DC_EXT" type="VARCHAR(30)" unit="mA"/>
