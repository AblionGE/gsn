<virtual-sensor name="ETZ_pos2_BackLogStatus__chart" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.ChartVirtualSensorPermasense</class-name>
        <init-params>
            <param name="input-Stream">data</param>
            <param name="title">Backlog queue size (7d)</param>
            <param name="height">400</param>
            <param name="width">610</param>
            <param name="vertical-axis">#</param>
            <param name="history-size">10080</param>
            <param name="time-stream-name">GENERATION_TIME</param>
        </init-params>
        <output-structure>
            <field name="data" type="binary:image/jpeg"/>
        </output-structure>
    </processing-class>
    <description>backlog health status from position 2 at ETZ deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage history-size="1" />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select timed, GENERATION_TIME, BACKLOG_DB_ENTRIES from ETZ_BackLogStatus__mapped__1946</predicate>
                    <predicate key="start-time">-604800000</predicate>
                </address>
                <query> select * from wrapper where POSITION = 2 </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
