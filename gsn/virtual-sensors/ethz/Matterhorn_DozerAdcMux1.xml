<virtual-sensor name="Matterhorn_DozerAdcMux1_1396" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="TIMESTAMP" type="BIGINT"/>
            <field name="GENERATIONTIME" type="BIGINT"/>
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" />
            <field name="PAYLOAD_SAMPLE_VALID" type="TINYINT" />
            <field name="PAYLOAD_SAMPLE_NO" type="SMALLINT" />
            <field name="PAYLOAD_A0_1" type="INTEGER" />
            <field name="PAYLOAD_A0_2" type="INTEGER" />
            <field name="PAYLOAD_A0_3" type="INTEGER" />
            <field name="PAYLOAD_A0_4" type="INTEGER" />
            <field name="PAYLOAD_A0_5" type="INTEGER" />
            <field name="PAYLOAD_A0_6" type="INTEGER" />
            <field name="PAYLOAD_A0_7" type="INTEGER" />
            <field name="PAYLOAD_A0_8" type="INTEGER" />
            <field name="PAYLOAD_A0_9" type="INTEGER" />
            <field name="PAYLOAD_A0_10" type="INTEGER" />
        </output-structure>
    </processing-class>
    <description>dozer messages (DozerAdcMux1Msg) from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="backlog">
                    <predicate key="plugin-classname">gsn.wrappers.backlog.plugins.MigMessagePlugin</predicate>
                    <predicate key="message-classname">ch.ethz.permasense.tinyos1x.messages.DozerAdcMux1Msg</predicate>
                </address>
                <query> select TIMESTAMP, GENERATIONTIME, HEADER_SEQNR, HEADER_ORIGINATORID, HEADER_ATIME, 
                    to_tinyint(PAYLOAD_SAMPLENO &gt;&gt; 15) as PAYLOAD_SAMPLE_VALID, 
                    to_smallint(PAYLOAD_SAMPLENO &amp; 32767) as PAYLOAD_SAMPLE_NO, 
                    PAYLOAD_SIBADC00 as PAYLOAD_A0_1, 
                    PAYLOAD_SIBADC01 as PAYLOAD_A0_2, 
                    PAYLOAD_SIBADC02 as PAYLOAD_A0_3, 
                    PAYLOAD_SIBADC03 as PAYLOAD_A0_4, 
                    PAYLOAD_SIBADC04 as PAYLOAD_A0_5, 
                    PAYLOAD_SIBADC05 as PAYLOAD_A0_6, 
                    PAYLOAD_SIBADC06 as PAYLOAD_A0_7, 
                    PAYLOAD_SIBADC07 as PAYLOAD_A0_8, 
                    PAYLOAD_SIBADC08 as PAYLOAD_A0_9, 
                    PAYLOAD_SIBADC09 as PAYLOAD_A0_10 from wrapper
                </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
